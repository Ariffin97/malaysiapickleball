# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/malaysia-pickleball

# For MongoDB Atlas (cloud), use this format instead:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/malaysia-pickleball?retryWrites=true&w=majority

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Application Configuration
NODE_ENV=development
PORT=3000

# Security Configuration
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=7200000

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Configuration (required for player registration emails)
# SMTP Configuration - Gmail example
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Alternative SMTP providers:
# Outlook: smtp-mail.outlook.com (port 587)
# Yahoo: smtp.mail.yahoo.com (port 587)
# Custom SMTP: your-smtp-server.com (port 587/465) 
{
  "name": "malaysia-pickleball",
  "version": "1.0.0",
  "description": "Website for Malaysia Pickleball Association",
  "main": "server-new.js",
  "scripts": {
    "start": "node server-new.js",
    "dev": "nodemon server-new.js",
    "local": "node server.js",
    "setup": "node quick-start.js",
    "build-css": "tailwindcss -i ./src/input.css -o ./public/css/tailwind.css --minify",
    "watch-css": "tailwindcss -i ./src/input.css -o ./public/css/tailwind.css --watch",
    "security-check": "node scripts/check-env-security.js",
    "generate-secret": "node -e \"console.log('SESSION_SECRET=' + require('crypto').randomBytes(64).toString('hex'))\"",
    "validate-env": "node -e \"require('dotenv').config(); console.log('âœ… Environment variables loaded successfully')\"",
    "backup-env": "copy .env .env.backup",
    "prestart": "npm run validate-env"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^6.0.1",
    "html-pdf": "^3.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.17.0",
    "mongoose": "^8.15.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "tailwindcss": "^4.1.11"
  }
}

<script>
// Make functions global
window.openModal = function(modalId) {
  console.log('Opening modal:', modalId); // Debug log
  const modal = document.getElementById(modalId);
  console.log('Modal element found:', modal); // Debug log
  if (modal) {
    modal.classList.add('show');
    document.body.style.overflow = 'hidden'; // Prevent background scrolling
    console.log('Modal should be visible now'); // Debug log
  } else {
    console.error('Modal not found:', modalId);
  }
};

window.closeModal = function(modalId) {
  console.log('Closing modal:', modalId); // Debug log
  const modal = document.getElementById(modalId);
  if (modal) {
    modal.classList.remove('show');
    document.body.style.overflow = ''; // Restore scrolling
  }
};

// Wait for DOM to be ready
document.addEventListener('DOMContentLoaded', function() {
  console.log('DOM loaded, setting up modal event listeners'); // Debug log
  
  // Add click event listeners to open buttons
  const privacyBtn = document.getElementById('privacyBtn');
  const termsBtn = document.getElementById('termsBtn');
  const cookiesBtn = document.getElementById('cookiesBtn');
  
  if (privacyBtn) {
    privacyBtn.addEventListener('click', function(e) {
      e.preventDefault();
      console.log('Privacy clicked'); // Debug log
      window.openModal('privacyModal');
    });
  }
  
  if (termsBtn) {
    termsBtn.addEventListener('click', function(e) {
      e.preventDefault();
      console.log('Terms clicked'); // Debug log
      window.openModal('termsModal');
    });
  }
  
  if (cookiesBtn) {
    cookiesBtn.addEventListener('click', function(e) {
      e.preventDefault();
      console.log('Cookies clicked'); // Debug log
      window.openModal('cookiesModal');
    });
  }
  
  // Add click event listeners to close buttons
  const closePrivacyBtn = document.getElementById('closePrivacyBtn');
  const closeTermsBtn = document.getElementById('closeTermsBtn');
  const closeCookiesBtn = document.getElementById('closeCookiesBtn');
  
  if (closePrivacyBtn) {
    closePrivacyBtn.addEventListener('click', function(e) {
      e.preventDefault();
      window.closeModal('privacyModal');
    });
  }
  
  if (closeTermsBtn) {
    closeTermsBtn.addEventListener('click', function(e) {
      e.preventDefault();
      window.closeModal('termsModal');
    });
  }
  
  if (closeCookiesBtn) {
    closeCookiesBtn.addEventListener('click', function(e) {
      e.preventDefault();
      window.closeModal('cookiesModal');
    });
  }
  
  // Close modal when clicking outside of it
  document.addEventListener('click', function(event) {
    if (event.target.classList.contains('modal')) {
      window.closeModal(event.target.id);
    }
  });

  // Close modal when pressing Escape key
  document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
      const openModal = document.querySelector('.modal.show');
      if (openModal) {
        window.closeModal(openModal.id);
      }
    }
  });
  
  // Test if modals and buttons exist
  console.log('Privacy modal exists:', !!document.getElementById('privacyModal'));
  console.log('Terms modal exists:', !!document.getElementById('termsModal'));
  console.log('Cookies modal exists:', !!document.getElementById('cookiesModal'));
  console.log('Privacy button exists:', !!privacyBtn);
  console.log('Terms button exists:', !!termsBtn);
  console.log('Cookies button exists:', !!cookiesBtn);
});

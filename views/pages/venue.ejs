<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Venues - Malaysia Pickleball Association</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<%
  const defaultBg = backgroundImage || '/images/defaultbg.png';
%>
<body class="bg-gray-100 bg-cover bg-center bg-fixed min-h-screen" style="background-image: url('<%= defaultBg %>')">
  <%- include('../partials/header') %>
  <%- include('../partials/sidebar') %>
  <main class="md:ml-64 pt-20 p-4 pb-20 min-h-screen">
    <div class="container mx-auto">
      <div class="bg-white bg-opacity-90 p-6 rounded-lg shadow-lg mb-6">
        <h1 class="text-3xl font-bold mb-4 text-gray-800">Our Venues</h1>
      </div>
      <% if (venues.length) { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 bg-white bg-opacity-90 p-4 rounded-lg shadow-lg">
          <% venues.forEach(venue => { %>
            <div class="p-4 bg-white rounded shadow card">
              <h2 class="text-xl font-bold"><%= venue.name %></h2>
              <p><%= venue.address %></p>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="bg-white bg-opacity-90 p-6 rounded-lg shadow-lg">
          <p>No venues available at the moment.</p>
        </div>
      <% } %>
    </div>
  </main>

  <%- include('../partials/footer') %>
  <script src="/js/script.js"></script>
</body>
</html>

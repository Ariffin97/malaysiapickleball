<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Venues - Malaysia Pickleball Association</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    .coming-soon-card {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      transition: all 0.3s ease;
    }
    .coming-soon-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }
    .pulse-animation {
      animation: pulse 2s infinite;
    }
    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.7; }
    }
  </style>
</head>
<%
  const defaultBg = backgroundImage || '/images/defaultbg.png';
%>
<body class="bg-gray-100 bg-cover bg-center bg-fixed min-h-screen" style="background-image: url('<%= defaultBg %>')">
  <%- include('../partials/header') %>
  
  <main class="pt-20 pb-20 min-h-screen">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-gray-800 mb-6 text-center">Venues</h1>

      <!-- React mount -->
      <div id="venues-root"></div>

      <!-- Featured image + one mini image under the table when present -->
      <% if (venues && venues.length) { %>
        <% const first = venues[0]; const imgs = (first.imageUrls && first.imageUrls.length) ? first.imageUrls : (first.imageUrl ? [first.imageUrl] : []); %>
        <% if (imgs.length) { %>
          <div class="mt-8 max-w-4xl mx-auto">
            <img src="<%= imgs[0] %>" alt="<%= first.name %>" class="w-full h-72 object-cover rounded-xl shadow" />
            <% if (imgs.length > 1) { %>
              <div class="mt-3 grid grid-cols-4 gap-3">
                <img src="<%= imgs[1] %>" alt="<%= first.name %> thumbnail" class="col-span-1 h-24 w-full object-cover rounded-lg shadow" />
              </div>
            <% } %>
          </div>
        <% } %>
      <% } %>

      <noscript>
        <p class="text-center text-gray-600">JavaScript is required to view the venues table.</p>
      </noscript>
    </div>
  </main>

  <%- include('../partials/footer') %>
  <script id="venues-data" type="application/json"><%- JSON.stringify(venues || []) %></script>
  <script>
    (function(){
      try {
        var raw = document.getElementById('venues-data');
        window.__VENUES__ = raw ? JSON.parse(raw.textContent || '[]') : [];
      } catch(_) { window.__VENUES__ = []; }
    })();
  </script>
  <script crossorigin src="https://cdn.jsdelivr.net/npm/react@18/umd/react.production.min.js"></script>
  <script crossorigin src="https://cdn.jsdelivr.net/npm/react-dom@18/umd/react-dom.production.min.js"></script>
  <script src="/js/venue-table.js"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Official Partnership - Malaysia Pickleball Association</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    .logo-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      position: relative;
    }
    
    .logo-container img {
      max-width: 100%;
      height: auto;
    }
    
    /* Professional glassmorphism effects */
    .bg-white\/30 {
      background: rgba(255, 255, 255, 0.3);
    }
    
    .bg-white\/20 {
      background: rgba(255, 255, 255, 0.2);
    }
    
    /* Enhanced animations */
    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }
    
    .animate-pulse {
      animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
    
    /* Improved hover effects */
    .group:hover .group-hover\:shadow-2xl {
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    }
    
    .group:hover .group-hover\:-translate-y-2 {
      transform: translateY(-0.5rem);
    }
    
    .group:hover .group-hover\:scale-105 {
      transform: scale(1.05);
    }
    
    /* Gradient text effects */
    .bg-gradient-to-r {
      background-image: linear-gradient(to right, var(--tw-gradient-stops));
    }
    
    .from-blue-500 {
      --tw-gradient-from: #3b82f6;
      --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to, rgba(59, 130, 246, 0));
    }
    
    .to-purple-600 {
      --tw-gradient-to: #9333ea;
    }
    
    /* Mobile responsiveness */
    @media (max-width: 1024px) {
      .lg\:flex {
        display: none !important;
      }
    }
  </style>
</head>
<%
  const defaultBg = backgroundImage || '/images/defaultbg.png';
%>
<body class="min-h-screen" style="background: linear-gradient(135deg, #ffffff 0%, #f0f9ff 25%, #dbeafe 50%, #bfdbfe 75%, #93c5fd 100%);">
  <%- include('../partials/header') %>
  
  <main class="min-h-screen relative z-10" style="padding-top: var(--navbar-height);">


    <!-- Partnership Logos Section -->
    <section class="py-6 relative min-h-screen flex items-center justify-center">
      <div class="container mx-auto px-4 max-w-6xl">
        <!-- Header Section -->
        <div class="text-center mb-8">
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-800 mb-3 leading-tight">
            Official Ranking Partner
          </h1>
          <div class="w-16 h-0.5 bg-gradient-to-r from-blue-500 to-purple-600 mx-auto rounded-full mb-4"></div>
        </div>

        <!-- Logos Container -->
        <div class="flex flex-col lg:flex-row items-center justify-center gap-16 lg:gap-24">
            <!-- PG Logo -->
            <div class="logo-container group">
              <img src="/images/pglogo.png" alt="PickleballGlobal - Official Ranking System" class="w-48 h-48 md:w-56 md:h-56 lg:w-64 lg:h-64 object-contain transition-transform duration-500 group-hover:scale-105">
              <div class="text-center mt-6">
                <h3 class="text-xl font-bold text-gray-800 mb-2">PickleballGlobal</h3>
                <p class="text-gray-600 text-sm">Global Ranking System</p>
              </div>
            </div>
            
            <!-- Partnership Connection -->
            <div class="hidden lg:flex flex-col items-center">
              <div class="w-px h-16 bg-gradient-to-b from-transparent via-gray-300 to-transparent"></div>
              <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center shadow-lg">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                </svg>
              </div>
              <div class="w-px h-16 bg-gradient-to-b from-transparent via-gray-300 to-transparent"></div>
            </div>

            <!-- WPC Logo -->
            <div class="logo-container group">
              <img src="/images/wpclogo.png" alt="WPC Series - World Pickleball Championship" class="w-48 h-48 md:w-56 md:h-56 lg:w-64 lg:h-64 object-contain transition-transform duration-500 group-hover:scale-105">
              <div class="text-center mt-6">
                <h3 class="text-xl font-bold text-gray-800 mb-2">WPC Series</h3>
                <p class="text-gray-600 text-sm">World Championship Series</p>
              </div>
            </div>
          </div>


      </div>
    </section>
  </main>

  <%- include('../partials/footer') %>
  <script src="/js/script.js"></script>
</body>
</html> 
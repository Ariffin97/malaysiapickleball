<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shop - Malaysia Pickleball Association</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    /* Smooth scrolling optimizations for all devices */
    * {
      -webkit-overflow-scrolling: touch;
    }
    
    html {
      scroll-behavior: smooth;
      -webkit-text-size-adjust: 100%;
      -ms-text-size-adjust: 100%;
    }
    
    body {
      -webkit-overflow-scrolling: touch;
      overscroll-behavior: contain;
      scroll-behavior: smooth;
    }
    
    .coming-soon-section {
      background: linear-gradient(135deg, rgba(0,0,0,0.7), rgba(0,0,0,0.5));
      position: relative;
      overflow: hidden;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .floating-element {
      animation: float 8s ease-in-out infinite;
    }
    
    .floating-element:nth-child(2n) {
      animation-delay: -4s;
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-15px); }
    }
    
    .shop-icon {
      animation: pulse 3s infinite;
    }
    
    @keyframes pulse {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.03); }
    }
    
    .notify-button {
      background: linear-gradient(135deg, #f59e0b, #d97706);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }
    
    .notify-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 25px rgba(245, 158, 11, 0.4);
    }
    
    .notify-button::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
      transition: left 0.5s;
    }
    
    .notify-button:hover::before {
      left: 100%;
    }
    
    /* Mobile optimizations */
    @media (max-width: 768px) {
      .coming-soon-section {
        padding: 2rem 1rem;
      }
      
      .feature-preview {
        margin-bottom: 1rem;
      }
    }
  </style>
</head>
<%
  const defaultBg = backgroundImage || '/images/defaultbg.png';
%>
<body class="bg-gray-100 bg-cover bg-center bg-fixed min-h-screen" style="background-image: url('<%= defaultBg %>')">
  <%- include('../partials/header') %>
  <%- include('../partials/sidebar') %>
  
  <!-- Floating Elements -->
  <div class="fixed inset-0 pointer-events-none z-0">
    <div class="floating-element absolute top-1/4 right-10 w-3 h-3 bg-orange-400 rounded-full opacity-30"></div>
    <div class="floating-element absolute bottom-1/4 left-10 w-4 h-4 bg-yellow-400 rounded-full opacity-20"></div>
  </div>
  
  <main class="md:ml-64 min-h-screen relative z-10" style="padding-top: var(--navbar-height);">
    <!-- Coming Soon Section -->
    <section class="coming-soon-section">
      <div class="container mx-auto px-4 text-center">
        <div class="max-w-4xl mx-auto">
          <!-- Shop Icon -->
          <div class="shop-icon mb-8">
            <div class="inline-flex items-center justify-center w-24 h-24 bg-gradient-to-r from-orange-400 to-yellow-500 rounded-full shadow-2xl">
              <i class="fas fa-shopping-cart text-white text-4xl"></i>
            </div>
          </div>
          
          <!-- Main Heading -->
          <h1 class="text-6xl md:text-8xl font-bold mb-4 text-white">
            Shop
          </h1>
          <h2 class="text-3xl md:text-5xl font-bold mb-8">
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-yellow-400">
              Coming Soon
            </span>
          </h2>
          
          <!-- Subtitle -->
          <p class="text-lg md:text-xl mb-16 text-gray-300 max-w-2xl mx-auto leading-relaxed">
            We're building an amazing shopping experience for all your pickleball needs. 
            Get ready for premium equipment, merchandise, and exclusive gear!
          </p>
          
          <!-- Simple Features List -->
          <div class="mb-16">
            <div class="flex flex-wrap justify-center gap-8 text-gray-300">
              <div class="flex items-center space-x-2">
                <i class="fas fa-table-tennis text-orange-400"></i>
                <span>Premium Equipment</span>
              </div>
              <div class="flex items-center space-x-2">
                <i class="fas fa-tshirt text-orange-400"></i>
                <span>Official Merchandise</span>
              </div>
              <div class="flex items-center space-x-2">
                <i class="fas fa-shipping-fast text-orange-400"></i>
                <span>Fast Delivery</span>
              </div>
            </div>
          </div>
          
          <!-- Notify Me Button -->
          <div class="mb-12">
            <button class="notify-button text-white px-10 py-4 rounded-full font-semibold text-lg shadow-lg transform transition-all duration-300 hover:scale-105">
              <i class="fas fa-bell mr-2"></i>
              Notify Me When Available
            </button>
          </div>
          
          <!-- Back to Home -->
          <div class="mt-8">
            <a href="/" class="inline-flex items-center text-orange-400 hover:text-orange-300 font-semibold transition-colors">
              <i class="fas fa-arrow-left mr-2"></i>
              Back to Home
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <%- include('../partials/footer') %>
  
  <!-- Mobile Scroll Optimization -->
  <script src="/js/mobile-scroll-optimizer.js"></script>
  
  <script>
    // Notify button functionality
    document.querySelector('.notify-button').addEventListener('click', function() {
      // You can implement email collection or notification signup here
      alert('Thank you for your interest! We\'ll notify you when the shop is available.');
    });
  </script>
</body>
</html> 
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= venue.name %> - Venue</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-gray-100">
  <%- include('../partials/header') %>
  <main class="pt-20 pb-16">
    <div class="container mx-auto px-4">
      <div class="mb-6">
        <a href="/venue" class="text-blue-600 hover:text-blue-800 underline">‚Üê Back to Venues</a>
      </div>

      <div class="bg-white rounded-2xl shadow p-6">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
          <div class="lg:col-span-1">
            <div class="rounded-xl overflow-hidden bg-gray-100">
              <% const imgs = (venue.imageUrls && venue.imageUrls.length) ? venue.imageUrls : (venue.imageUrl ? [venue.imageUrl] : []); %>
              <% if (imgs.length) { %>
                <img src="<%= imgs[0] %>" alt="<%= venue.name %>" class="w-full h-64 object-cover">
                <% if (imgs.length > 1) { %>
                  <div class="grid grid-cols-4 gap-2 mt-2">
                    <% imgs.slice(1, 5).forEach(function(u){ %>
                      <img src="<%= u %>" class="w-full h-20 object-cover rounded" />
                    <% }) %>
                  </div>
                <% } %>
              <% } else { %>
                <div class="w-full h-64 flex items-center justify-center text-gray-400">No image</div>
              <% } %>
            </div>
          </div>
          <div class="lg:col-span-2">
            <h1 class="text-3xl font-bold text-gray-800 mb-2"><%= venue.name %></h1>
            <p class="text-gray-600 mb-4 whitespace-pre-wrap"><%= venue.address %></p>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="p-4 bg-gray-50 rounded-lg">
                <div class="text-gray-500 text-sm">Total Courts</div>
                <div class="text-xl font-semibold"><%= venue.totalCourts || 0 %></div>
              </div>
              <div class="p-4 bg-gray-50 rounded-lg">
                <div class="text-gray-500 text-sm">Owner</div>
                <div class="text-xl font-semibold"><%= venue.owner || '-' %></div>
              </div>
              <div class="p-4 bg-gray-50 rounded-lg">
                <div class="text-gray-500 text-sm">Phone</div>
                <div class="text-xl font-semibold"><%= venue.phone || '-' %></div>
              </div>
              <div class="p-4 bg-gray-50 rounded-lg">
                <div class="text-gray-500 text-sm">Booking</div>
                <div class="text-xl font-semibold">
                  <% if (venue.bookingUrl) { %>
                    <a href="<%= venue.bookingUrl %>" target="_blank" class="text-green-600 hover:text-green-800 underline">Book Now</a>
                  <% } else { %>
                    -
                  <% } %>
                </div>
              </div>
            </div>

            <% if (venue.mapsUrl) { %>
              <div class="mt-6">
                <a href="<%= venue.mapsUrl %>" target="_blank" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                  Open in Maps
                </a>
              </div>
            <% } %>
          </div>
        </div>

        <div class="mt-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-3">Tournament History</h2>
          <% if (venue.history && venue.history.length) { %>
            <ul class="list-disc list-inside text-gray-700">
              <% venue.history.forEach(h => { %>
                <li><%= h %></li>
              <% }) %>
            </ul>
          <% } else { %>
            <p class="text-gray-600">No tournament history recorded yet.</p>
          <% } %>
        </div>

        <div class="mt-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-3">Supported Tournament Levels</h2>
          <% if (venue.tournamentLevels && venue.tournamentLevels.length) { %>
            <div class="flex flex-wrap gap-2">
              <% venue.tournamentLevels.forEach(function(l){ %>
                <span class="px-3 py-1 rounded-full bg-blue-100 text-blue-800 text-sm"><%= l %></span>
              <% }) %>
            </div>
          <% } else { %>
            <p class="text-gray-600">Not specified.</p>
          <% } %>
        </div>
      </div>
    </div>
  </main>
  <%- include('../partials/footer') %>
</body>
</html>



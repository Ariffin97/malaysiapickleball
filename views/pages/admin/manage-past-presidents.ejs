<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Past Presidents - Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    .admin-card {
      transition: all 0.3s ease;
      border-left: 4px solid transparent;
    }
    .admin-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
      border-left-color: #3B82F6;
    }
    .form-input {
      transition: all 0.3s ease;
    }
    .form-input:focus {
      border-color: #3B82F6;
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }
    .president-photo {
      width: 80px;
      height: 100px;
      object-fit: cover;
      border-radius: 8px;
    }
    .alert {
      padding: 1rem;
      border-radius: 8px;
      margin-bottom: 1rem;
      font-weight: 500;
    }
    .alert-success {
      background-color: #d1fae5;
      border: 1px solid #10b981;
      color: #065f46;
    }
    .alert-error {
      background-color: #fee2e2;
      border: 1px solid #ef4444;
      color: #991b1b;
    }
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0,0,0,0.4);
    }
    .modal-content {
      background-color: #fefefe;
      margin: 15% auto;
      padding: 20px;
      border: none;
      border-radius: 12px;
      width: 90%;
      max-width: 600px;
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
    }
    .close {
      color: #aaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
      cursor: pointer;
    }
    .close:hover {
      color: #000;
    }
  </style>
</head>
<body class="bg-gray-100">
  <!-- Admin Navigation -->
  <nav class="bg-gray-800 shadow-lg">
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <h1 class="text-white text-xl font-bold">MPA Admin Dashboard</h1>
          </div>
          <div class="ml-10 flex items-baseline space-x-4">
            <a href="/admin/dashboard" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Dashboard</a>
            <a href="/admin/organization-chart" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Organization Chart</a>
            <a href="/admin/past-presidents" class="bg-gray-900 text-white px-3 py-2 rounded-md text-sm font-medium">Past Presidents</a>
            <a href="/admin/tournaments" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Tournaments</a>
          </div>
        </div>
        <div class="flex items-center">
          <span class="text-gray-300 text-sm mr-4">Welcome, <%= adminUsername || 'Admin' %></span>
          <a href="/admin/logout" class="text-gray-300 hover:text-white">
            <i class="fas fa-sign-out-alt"></i> Logout
          </a>
        </div>
      </div>
    </div>
  </nav>
  
  <div class="container mx-auto px-4 py-8 max-w-7xl">
    <!-- Page Header -->
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Manage Past Presidents</h1>
        <p class="text-gray-600">Add, edit, and manage past presidents information</p>
      </div>
      <button onclick="openAddModal()" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors duration-200 flex items-center">
        <i class="fas fa-plus mr-2"></i>
        Add New Past President
      </button>
    </div>

    <!-- Alert Messages -->
    <% if (typeof message !== 'undefined' && message) { %>
      <div class="alert alert-<%= message.includes('error') || message.includes('failed') ? 'error' : 'success' %>">
        <i class="fas fa-<%= message.includes('error') || message.includes('failed') ? 'exclamation-triangle' : 'check-circle' %> mr-2"></i>
        <%= message %>
      </div>
    <% } %>

    <!-- Past Presidents Table -->
    <div class="admin-card bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="p-6 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 mb-2">Past Presidents</h2>
        <p class="text-gray-600">Total: <%= pastPresidents.length %> presidents</p>
      </div>
      
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Photo</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Years of Service</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if (pastPresidents && pastPresidents.length > 0) { %>
              <% pastPresidents.forEach(president => { %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if (president.image) { %>
                      <img src="<%= president.image %>" alt="<%= president.imageAlt || president.name %>" class="president-photo">
                    <% } else { %>
                      <div class="president-photo bg-gray-200 flex items-center justify-center">
                        <i class="fas fa-user text-gray-500 text-xl"></i>
                      </div>
                    <% } %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= president.name %></div>
                    <div class="text-sm text-gray-500">
                      <%= president.contribution.length > 50 ? president.contribution.substring(0, 50) + '...' : president.contribution %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900"><%= president.startYear %> - <%= president.endYear %></div>
                    <div class="text-sm text-gray-500"><%= president.endYear - president.startYear + 1 %> years</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= president.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                      <%= president.status %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <div class="flex items-center space-x-2">
                      <button onclick="editPresident('<%= president._id %>')" class="text-blue-600 hover:text-blue-900" title="Edit">
                        <i class="fas fa-edit"></i>
                      </button>
                      <form method="POST" action="/admin/past-presidents/toggle-status/<%= president._id %>" class="inline" onsubmit="return confirm('Are you sure you want to toggle the status?')">
                        <button type="submit" class="text-yellow-600 hover:text-yellow-900" title="Toggle Status">
                          <i class="fas fa-<%= president.status === 'active' ? 'archive' : 'undo' %>"></i>
                        </button>
                      </form>
                      <form method="POST" action="/admin/past-presidents/delete/<%= president._id %>" class="inline" onsubmit="return confirm('Are you sure you want to delete this past president? This action cannot be undone.')">
                        <button type="submit" class="text-red-600 hover:text-red-900" title="Delete">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="5" class="px-6 py-8 text-center text-gray-500">
                  <i class="fas fa-users text-4xl mb-4"></i>
                  <p>No past presidents found. Add your first past president above.</p>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Add/Edit Past President Modal -->
  <div id="pastPresidentModal" class="modal">
    <div class="modal-content">
      <div class="flex items-center justify-between mb-6">
        <h2 id="modalTitle" class="text-2xl font-bold text-gray-900">Add New Past President</h2>
        <span class="close" onclick="closeModal()">&times;</span>
      </div>
      
      <form id="pastPresidentForm" method="POST" enctype="multipart/form-data">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Name -->
          <div class="md:col-span-2">
            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Name *</label>
            <input type="text" id="name" name="name" required 
                   class="form-input w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none">
          </div>

          <!-- Years -->
          <div>
            <label for="startYear" class="block text-sm font-medium text-gray-700 mb-2">Start Year *</label>
            <input type="number" id="startYear" name="startYear" required min="1990" max="2030"
                   class="form-input w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none">
          </div>
          
          <div>
            <label for="endYear" class="block text-sm font-medium text-gray-700 mb-2">End Year *</label>
            <input type="number" id="endYear" name="endYear" required min="1990" max="2030"
                   class="form-input w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none">
          </div>

          <!-- Photo -->
          <div class="md:col-span-2">
            <label for="image" class="block text-sm font-medium text-gray-700 mb-2">Photo</label>
            <input type="file" id="image" name="image" accept="image/*"
                   class="form-input w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none">
            <p class="text-sm text-gray-500 mt-1">Maximum file size: 10MB. Recommended: 300x400 pixels</p>
          </div>

          <!-- Contribution -->
          <div class="md:col-span-2">
            <label for="contribution" class="block text-sm font-medium text-gray-700 mb-2">Contribution *</label>
            <textarea id="contribution" name="contribution" required rows="4"
                      class="form-input w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none"
                      placeholder="Describe their contributions and achievements during their tenure..."></textarea>
          </div>

          <!-- Achievements -->
          <div class="md:col-span-2">
            <label for="achievements" class="block text-sm font-medium text-gray-700 mb-2">Key Achievements (Optional)</label>
            <textarea id="achievements" name="achievements" rows="3"
                      class="form-input w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none"
                      placeholder="Enter key achievements, one per line..."></textarea>
            <p class="text-sm text-gray-500 mt-1">Enter each achievement on a new line</p>
          </div>
        </div>

        <div class="flex items-center justify-end space-x-4 mt-8">
          <button type="button" onclick="closeModal()" 
                  class="px-6 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition-colors duration-200">
            Cancel
          </button>
          <button type="submit" 
                  class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors duration-200">
            <span id="submitButtonText">Add Past President</span>
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    let editingPresidentId = null;

    function openAddModal() {
      editingPresidentId = null;
      document.getElementById('modalTitle').textContent = 'Add New Past President';
      document.getElementById('submitButtonText').textContent = 'Add Past President';
      document.getElementById('pastPresidentForm').action = '/admin/past-presidents/create';
      
      // Clear form
      document.getElementById('pastPresidentForm').reset();
      
      document.getElementById('pastPresidentModal').style.display = 'block';
    }

    function closeModal() {
      document.getElementById('pastPresidentModal').style.display = 'none';
      editingPresidentId = null;
    }

    async function editPresident(presidentId) {
      try {
        const response = await fetch(`/api/admin/past-presidents/${presidentId}`);
        const data = await response.json();
        
        if (data.success) {
          const president = data.pastPresident;
          
          editingPresidentId = presidentId;
          document.getElementById('modalTitle').textContent = 'Edit Past President';
          document.getElementById('submitButtonText').textContent = 'Update Past President';
          document.getElementById('pastPresidentForm').action = `/admin/past-presidents/update/${presidentId}`;
          
          // Populate form
          document.getElementById('name').value = president.name;
          document.getElementById('startYear').value = president.startYear;
          document.getElementById('endYear').value = president.endYear;
          document.getElementById('contribution').value = president.contribution;
          document.getElementById('achievements').value = president.achievements ? president.achievements.join('\n') : '';
          
          document.getElementById('pastPresidentModal').style.display = 'block';
        } else {
          alert('Error loading past president details: ' + data.error);
        }
      } catch (error) {
        console.error('Error loading past president:', error);
        alert('Error loading past president details. Please try again.');
      }
    }

    // Close modal when clicking outside
    window.onclick = function(event) {
      const modal = document.getElementById('pastPresidentModal');
      if (event.target === modal) {
        closeModal();
      }
    }

    // Form validation
    document.getElementById('pastPresidentForm').addEventListener('submit', function(e) {
      const startYear = parseInt(document.getElementById('startYear').value);
      const endYear = parseInt(document.getElementById('endYear').value);
      
      if (endYear < startYear) {
        e.preventDefault();
        alert('End year cannot be before start year.');
        return false;
      }
      
      if (startYear < 1990 || endYear < 1990) {
        e.preventDefault();
        alert('Years must be 1990 or later.');
        return false;
      }
      
      if (startYear > new Date().getFullYear() || endYear > new Date().getFullYear()) {
        e.preventDefault();
        alert('Years cannot be in the future.');
        return false;
      }
    });

    // Auto-hide alerts after 5 seconds
    document.addEventListener('DOMContentLoaded', function() {
      const alerts = document.querySelectorAll('.alert');
      alerts.forEach(alert => {
        setTimeout(() => {
          alert.style.opacity = '0';
          setTimeout(() => {
            alert.remove();
          }, 300);
        }, 5000);
      });
    });
  </script>
</body>
</html>
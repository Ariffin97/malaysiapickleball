               setTimeout(() => {
                 window.location.href = result.redirect || '/login';
               }, 2000);
               return;
             }
             
             if (result.success) {
               showSuccessMessage('Tournament updated successfully! ‚úÖ');
               closeEditModal();
               
               // Reload page to show updated data
               setTimeout(() => {
                 window.location.reload();
               }, 1000);
             } else {
               throw new Error(result.message || 'Failed to update tournament');
             }
           } catch (error) {
             console.error('Update error:', error);
             
             // Check if it's a JSON parsing error (which was the original issue)
             if (error.message.includes('Unexpected token')) {
               showErrorMessage('Session may have expired. Please refresh the page and try again.');
             } else {
               showErrorMessage(`Failed to update tournament: ${error.message}`);
             }
           } finally {
             // Restore button state
             submitBtn.disabled = false;
             submitBtn.innerHTML = originalText;
           }
         });
       }
     });
  </script>

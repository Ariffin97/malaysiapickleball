         } else {
           throw new Error(result.message || 'Failed to delete tournament');
         }
       } catch (error) {
         console.error('Delete error:', error);
         
         // Restore button state
         deleteBtn.disabled = false;
         deleteBtn.innerHTML = originalText;
         
         // Show error message

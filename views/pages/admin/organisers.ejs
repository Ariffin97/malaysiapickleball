<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Organisers - Malaysia Pickleball Association Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    .organiser-card {
      transition: all 0.3s ease;
      border-left: 4px solid transparent;
    }
    .organiser-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
      border-left-color: #8b5cf6;
    }
    .status-active {
      background: linear-gradient(135deg, #10b981, #059669);
    }
    .status-inactive {
      background: linear-gradient(135deg, #ef4444, #dc2626);
    }
    .loading-spinner {
      animation: spin 1s linear infinite;
    }
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
    .filter-btn.active {
      background: linear-gradient(135deg, #8b5cf6, #7c3aed);
      color: white;
    }
  </style>
</head>
<body class="bg-gray-50">
  <%- include('../../partials/header') %>
  
  <main class="pt-24 pb-8">
    <div class="container mx-auto px-4 max-w-7xl">
      <!-- Page Header -->
      <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center">
          <div>
            <h1 class="text-3xl font-bold text-gray-800 mb-2 flex items-center">
              <i class="fas fa-users-cog text-purple-500 mr-3"></i>
              Tournament Organisers
            </h1>
            <p class="text-gray-600">View and manage tournament organisers from MPA Portal</p>
          </div>
          <div class="flex items-center gap-4 mt-4 md:mt-0">
            <div class="bg-purple-100 text-purple-800 px-4 py-2 rounded-lg font-semibold">
              <i class="fas fa-sync-alt mr-2"></i>
              <span id="total-organisers">Loading...</span> Total
            </div>
            <a href="/admin/dashboard" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg font-semibold transition-colors">
              <i class="fas fa-arrow-left mr-2"></i>
              Back to Dashboard
            </a>
            <button onclick="refreshOrganisers()" class="bg-purple-500 hover:bg-purple-600 text-white px-4 py-2 rounded-lg font-semibold transition-colors">
              <i class="fas fa-sync-alt mr-2"></i>
              Refresh
            </button>
          </div>
        </div>
      </div>

      <!-- Filters and Search -->
      <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
        <div class="flex flex-col lg:flex-row gap-4 justify-between items-center">
          <!-- Search Bar -->
          <div class="flex-1 max-w-md">
            <div class="relative">
              <input type="text" id="search-organisers" placeholder="Search organisers..." 
                     class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500">
              <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
            </div>
          </div>
          
          <!-- Filter Buttons -->
          <div class="flex gap-2">
            <button class="filter-btn active px-4 py-2 rounded-lg font-medium transition-all" data-filter="all">
              <i class="fas fa-list mr-2"></i>All
            </button>
            <button class="filter-btn px-4 py-2 rounded-lg font-medium transition-all bg-gray-100 text-gray-700 hover:bg-gray-200" data-filter="active">
              <i class="fas fa-check-circle mr-2"></i>Active
            </button>
            <button class="filter-btn px-4 py-2 rounded-lg font-medium transition-all bg-gray-100 text-gray-700 hover:bg-gray-200" data-filter="recent">
              <i class="fas fa-clock mr-2"></i>Recent
            </button>
          </div>
        </div>
      </div>

      <!-- Loading State -->
      <div id="loading-state" class="text-center py-12">
        <div class="loading-spinner w-12 h-12 border-4 border-purple-200 border-t-purple-500 rounded-full mx-auto mb-4"></div>
        <p class="text-gray-600">Loading organisers from MPA Portal...</p>
      </div>

      <!-- Error State -->
      <div id="error-state" class="hidden bg-red-50 border border-red-200 rounded-xl p-8 text-center">
        <i class="fas fa-exclamation-triangle text-red-500 text-4xl mb-4"></i>
        <h3 class="text-lg font-semibold text-red-800 mb-2">Error Loading Organisers</h3>
        <p class="text-red-600 mb-4">Unable to fetch organiser data from the portal.</p>
        <button onclick="refreshOrganisers()" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg">
          <i class="fas fa-retry mr-2"></i>Try Again
        </button>
      </div>

      <!-- Organisers Grid -->
      <div id="organisers-container" class="hidden">
        <div id="organisers-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Organiser cards will be populated here -->
        </div>
        
        <!-- Empty State -->
        <div id="empty-state" class="hidden text-center py-12">
          <i class="fas fa-users text-gray-300 text-6xl mb-4"></i>
          <h3 class="text-lg font-semibold text-gray-600 mb-2">No Organisers Found</h3>
          <p class="text-gray-500">No tournament organisers match your current filters.</p>
        </div>
      </div>
    </div>
  </main>

  <%- include('../../partials/footer') %>
  
  <script>
    let allOrganisers = [];
    let filteredOrganisers = [];
    
    document.addEventListener('DOMContentLoaded', function() {
      loadOrganisers();
      setupEventListeners();
    });
    
    function setupEventListeners() {
      // Search functionality
      const searchInput = document.getElementById('search-organisers');
      searchInput.addEventListener('input', function() {
        filterOrganisers();
      });
      
      // Filter buttons
      document.querySelectorAll('.filter-btn').forEach(btn => {
        btn.addEventListener('click', function() {
          document.querySelectorAll('.filter-btn').forEach(b => {
            b.classList.remove('active');
            b.classList.add('bg-gray-100', 'text-gray-700', 'hover:bg-gray-200');
          });
          this.classList.add('active');
          this.classList.remove('bg-gray-100', 'text-gray-700', 'hover:bg-gray-200');
          filterOrganisers();
        });
      });
    }
    
    async function loadOrganisers() {
      try {
        showLoadingState();
        
        const response = await fetch('/api/admin/organisers');
        const data = await response.json();
        
        if (data.success) {
          allOrganisers = data.organisers || [];
          document.getElementById('total-organisers').textContent = allOrganisers.length;
          filterOrganisers();
          showOrganisersContainer();
        } else {
          throw new Error(data.message || 'Failed to load organisers');
        }
      } catch (error) {
        console.error('Error loading organisers:', error);
        showErrorState();
      }
    }
    
    function filterOrganisers() {
      const searchTerm = document.getElementById('search-organisers').value.toLowerCase();
      const activeFilter = document.querySelector('.filter-btn.active').dataset.filter;
      
      filteredOrganisers = allOrganisers.filter(organiser => {
        // Search filter
        const matchesSearch = !searchTerm || 
          organiser.name?.toLowerCase().includes(searchTerm) ||
          organiser.email?.toLowerCase().includes(searchTerm) ||
          organiser.organization?.toLowerCase().includes(searchTerm);
        
        // Status filter
        let matchesFilter = true;
        if (activeFilter === 'active') {
          matchesFilter = organiser.isActive !== false;
        } else if (activeFilter === 'recent') {
          const oneMonthAgo = new Date();
          oneMonthAgo.setMonth(oneMonthAgo.getMonth() - 1);
          matchesFilter = new Date(organiser.lastActive || organiser.createdAt) > oneMonthAgo;
        }
        
        return matchesSearch && matchesFilter;
      });
      
      renderOrganisers();
    }
    
    function renderOrganisers() {
      const container = document.getElementById('organisers-grid');
      const emptyState = document.getElementById('empty-state');
      
      if (filteredOrganisers.length === 0) {
        container.innerHTML = '';
        emptyState.classList.remove('hidden');
        return;
      }
      
      emptyState.classList.add('hidden');
      
      container.innerHTML = filteredOrganisers.map(organiser => `
        <div class="organiser-card bg-white rounded-xl shadow-lg p-6">
          <div class="flex justify-between items-start mb-4">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mr-4">
                <i class="fas fa-user text-purple-600"></i>
              </div>
              <div>
                <h3 class="font-semibold text-gray-800">${organiser.name || 'Unknown'}</h3>
                <p class="text-sm text-gray-600">${organiser.organization || 'No Organization'}</p>
              </div>
            </div>
            <div class="status-badge ${organiser.isActive !== false ? 'status-active' : 'status-inactive'} text-white px-3 py-1 rounded-full text-xs font-medium">
              ${organiser.isActive !== false ? 'Active' : 'Inactive'}
            </div>
          </div>
          
          <div class="space-y-3">
            ${organiser.email ? `
              <div class="flex items-center text-gray-600 text-sm">
                <i class="fas fa-envelope w-4 h-4 mr-3"></i>
                <a href="mailto:${organiser.email}" class="hover:text-purple-600">${organiser.email}</a>
              </div>
            ` : ''}
            
            ${organiser.phone ? `
              <div class="flex items-center text-gray-600 text-sm">
                <i class="fas fa-phone w-4 h-4 mr-3"></i>
                <a href="tel:${organiser.phone}" class="hover:text-purple-600">${organiser.phone}</a>
              </div>
            ` : ''}
            
            ${organiser.tournamentsCount ? `
              <div class="flex items-center text-gray-600 text-sm">
                <i class="fas fa-trophy w-4 h-4 mr-3"></i>
                <span>${organiser.tournamentsCount} tournament${organiser.tournamentsCount !== 1 ? 's' : ''}</span>
              </div>
            ` : ''}
            
            ${organiser.lastActive ? `
              <div class="flex items-center text-gray-600 text-sm">
                <i class="fas fa-clock w-4 h-4 mr-3"></i>
                <span>Last active: ${formatDate(organiser.lastActive)}</span>
              </div>
            ` : ''}
          </div>
          
          ${organiser.portalId ? `
            <div class="mt-4 pt-4 border-t border-gray-200">
              <div class="flex items-center text-blue-600 text-sm">
                <i class="fas fa-link w-4 h-4 mr-2"></i>
                <span>Portal ID: ${organiser.portalId}</span>
              </div>
            </div>
          ` : ''}
        </div>
      `).join('');
    }
    
    function formatDate(dateString) {
      if (!dateString) return 'Never';
      const date = new Date(dateString);
      const now = new Date();
      const diff = now - date;
      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      
      if (days === 0) return 'Today';
      if (days === 1) return 'Yesterday';
      if (days < 7) return `${days} days ago`;
      if (days < 30) return `${Math.floor(days / 7)} weeks ago`;
      if (days < 365) return `${Math.floor(days / 30)} months ago`;
      return date.toLocaleDateString();
    }
    
    function showLoadingState() {
      document.getElementById('loading-state').classList.remove('hidden');
      document.getElementById('error-state').classList.add('hidden');
      document.getElementById('organisers-container').classList.add('hidden');
    }
    
    function showErrorState() {
      document.getElementById('loading-state').classList.add('hidden');
      document.getElementById('error-state').classList.remove('hidden');
      document.getElementById('organisers-container').classList.add('hidden');
    }
    
    function showOrganisersContainer() {
      document.getElementById('loading-state').classList.add('hidden');
      document.getElementById('error-state').classList.add('hidden');
      document.getElementById('organisers-container').classList.remove('hidden');
    }
    
    function refreshOrganisers() {
      loadOrganisers();
    }
  </script>
</body>
</html>
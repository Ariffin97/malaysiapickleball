        console.warn('YouTube writeEmbed error suppressed - providing fallback');
        e.preventDefault();
        return false;
      }
      
      // Suppress other YouTube embed related errors
      if (e.message && e.message.includes('www-embed-player')) {
        console.warn('YouTube embed player error suppressed');
        e.preventDefault();
        return false;
      }
    });
    
    // Handle unhandled promise rejections from YouTube
    window.addEventListener('unhandledrejection', function(e) {
      if (e.reason && e.reason.message && e.reason.message.includes('caches')) {
        console.warn('YouTube cache promise rejection suppressed');
        e.preventDefault();
      }
    });
    
    // Provide comprehensive fallbacks for YouTube functions
    if (typeof writeEmbed === 'undefined') {

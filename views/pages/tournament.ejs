  <!-- Tournament Notices Functions -->
  <script>
    function loadTournamentNotices() {
      console.log('Loading tournament notices...');
      fetch('/api/tournament-notices')
        .then(response => {
          console.log('Tournament notices response status:', response.status);
          return response.json();
        })
        .then(data => {
          console.log('Tournament notices data received:', data);
          if (data.success) {
            console.log('Number of notices:', data.notices ? data.notices.length : 0);
            displayNotices(data.notices);
          } else {
            console.error('Failed to load notices:', data.message);
            showNoNoticesState();
          }
        })
        .catch(error => {
          console.error('Error loading notices:', error);
          showNoNoticesState();
        });
    }
    
    function showNoNoticesState() {
      const container = document.getElementById('noticesContainer');
      const noNoticesState = document.getElementById('noNoticesState');
      if (container) container.innerHTML = '';
      if (noNoticesState) noNoticesState.classList.remove('hidden');
    }
    
    function displayNotices(notices) {
      const container = document.getElementById('noticesContainer');
      const noNoticesState = document.getElementById('noNoticesState');
      
      console.log('Displaying notices:', notices);
      
      if (!notices || notices.length === 0) {
        if (container) container.innerHTML = '';
        if (noNoticesState) noNoticesState.classList.remove('hidden');
        return;
      }
      
      if (noNoticesState) noNoticesState.classList.add('hidden');
      
      // Create notices HTML safely without template literals
      const noticesHTML = notices.map(notice => {
        const colorClass = getNoticeColorClass(notice.type);
        const iconClass = getNoticeIconClass(notice.type);
        const timeAgo = getTimeAgo(notice.updatedAt || notice.createdAt);
        const typeDisplay = getNoticeTypeDisplay(notice.type);
        const detailsHTML = getNoticeDetailsHTML(notice);
        
        // Build classes safely
        const borderClass = 'border-l-4 border-' + colorClass + '-500';
        const bgClass = 'bg-' + colorClass + '-50';
        const iconColorClass = 'text-' + colorClass + '-500';
        const textColorClass = 'text-' + colorClass + '-700';
        const badgeBgClass = 'bg-' + colorClass + '-200';
        const badgeTextClass = 'text-' + colorClass + '-600';
        
        return '<div class="' + borderClass + ' ' + bgClass + ' p-4 rounded-lg">' +
               '<div class="flex items-start justify-between">' +
               '<div class="flex-1">' +
               '<div class="flex items-center mb-2">' +
               '<i class="fas ' + iconClass + ' ' + iconColorClass + ' mr-2"></i>' +
               '<span class="text-sm font-semibold ' + textColorClass + '">' + typeDisplay + '</span>' +
               '<span class="ml-2 text-xs ' + badgeTextClass + ' ' + badgeBgClass + ' px-2 py-1 rounded-full">Updated ' + timeAgo + '</span>' +
               '</div>' +
               '<h3 class="font-semibold text-gray-800 mb-1">' + (notice.tournamentName || 'Tournament') + '</h3>' +
               '<p class="text-sm text-gray-600 mb-2">' + (notice.message || 'No message') + '</p>' +
               detailsHTML +
               '</div>' +
               '</div>' +
               '</div>';
      }).join('');
      
      if (container) {
        container.innerHTML = noticesHTML;
        console.log('Notices displayed successfully');
      }
    }
    
    function getNoticeColorClass(type) {
      const colorMap = {
        'date_change': 'orange',
        'cancellation': 'red',
        'venue_change': 'blue',
        'registration_deadline': 'green',
        'general': 'gray'
      };
      return colorMap[type] || 'gray';
    }
    
    function getNoticeIconClass(type) {
      const iconMap = {
        'date_change': 'fa-calendar-alt',
        'cancellation': 'fa-times-circle',
        'venue_change': 'fa-map-marker-alt',
        'registration_deadline': 'fa-clock',
        'general': 'fa-bell'
      };
      return iconMap[type] || 'fa-bell';
    }
    
    function getNoticeTypeDisplay(type) {
      const typeMap = {
        'date_change': 'Date Change',
        'cancellation': 'Cancelled',
        'venue_change': 'Venue Change',
        'registration_deadline': 'Registration Deadline',
        'general': 'General Notice'
      };
      return typeMap[type] || type;
    }
    
    function getNoticeDetailsHTML(notice) {
      let detailsHTML = '';
      
      if (notice.details) {
        if (notice.type === 'date_change' && notice.details.originalDate && notice.details.newDate) {
          detailsHTML = '<div class="flex items-center text-xs text-gray-500">' +
                       '<i class="fas fa-clock mr-1"></i>' +
                       '<span>Original: ' + notice.details.originalDate + '</span>' +
                       '<i class="fas fa-arrow-right mx-2"></i>' +
                       '<span>New: ' + notice.details.newDate + '</span>' +
                       '</div>';
        } else if (notice.type === 'cancellation' && notice.details.reason) {
          detailsHTML = '<div class="flex items-center text-xs text-gray-500">' +
                       '<i class="fas fa-exclamation-triangle mr-1"></i>' +
                       '<span>Reason: ' + notice.details.reason + '</span>' +
                       '</div>';
        } else if (notice.type === 'venue_change' && notice.details.originalVenue && notice.details.newVenue) {
          detailsHTML = '<div class="flex items-center text-xs text-gray-500">' +
                       '<i class="fas fa-map-pin mr-1"></i>' +
                       '<span>From: ' + notice.details.originalVenue + '</span>' +
                       '<i class="fas fa-arrow-right mx-2"></i>' +
                       '<span>To: ' + notice.details.newVenue + '</span>' +
                       '</div>';
        } else if (notice.type === 'registration_deadline' && notice.details.deadline) {
          detailsHTML = '<div class="flex items-center text-xs text-gray-500">' +
                       '<i class="fas fa-calendar-check mr-1"></i>' +
                       '<span>New Deadline: ' + notice.details.deadline + '</span>' +
                       '</div>';
        }
      }
      
      return detailsHTML;
    }
    
    function getTimeAgo(dateString) {
      const date = new Date(dateString);
      const now = new Date();
      const diffMs = now - date;
      const diffMins = Math.floor(diffMs / 60000);
      const diffHours = Math.floor(diffMs / 3600000);
      const diffDays = Math.floor(diffMs / 86400000);
      
      if (diffMins < 1) return 'just now';
      if (diffMins < 60) return `${diffMins} minute${diffMins > 1 ? 's' : ''} ago`;
      if (diffHours < 24) return `${diffHours} hour${diffHours > 1 ? 's' : ''} ago`;
      if (diffDays < 7) return `${diffDays} day${diffDays > 1 ? 's' : ''} ago`;
      return date.toLocaleDateString();
    }
    
    // Auto-refresh functionality for tournament notices
    let autoRefreshInterval;
    let lastNoticeCount = 0;
    let isPageVisible = true;
    
    function setupAutoRefresh() {
      console.log('Setting up auto-refresh for tournament notices...');
      
      // Check for updates every 30 seconds
      autoRefreshInterval = setInterval(checkForNoticeUpdates, 30000);
      
      // Handle page visibility changes to pause/resume auto-refresh
      document.addEventListener('visibilitychange', function() {
        if (document.hidden) {
          isPageVisible = false;
          console.log('Page hidden - pausing auto-refresh');
        } else {
          isPageVisible = true;
          console.log('Page visible - resuming auto-refresh');
          // Check immediately when page becomes visible
          checkForNoticeUpdates();
        }
      });
      
      // Clear interval when page is unloaded
      window.addEventListener('beforeunload', function() {
        if (autoRefreshInterval) {
          clearInterval(autoRefreshInterval);
        }
      });
    }
    
    function checkForNoticeUpdates() {
      // Only check if page is visible
      if (!isPageVisible) {
        return;
      }
      
      console.log('Checking for notice updates...');
      
      fetch('/api/tournament-notices')
        .then(response => {
          console.log('Auto-refresh response status:', response.status);
          return response.json();
        })
        .then(data => {
          if (data.success) {
            const currentNoticeCount = data.notices ? data.notices.length : 0;
            
            // Check if there are new notices or updates
            if (currentNoticeCount !== lastNoticeCount) {
              console.log('Notice count changed:', lastNoticeCount, '->', currentNoticeCount);
              displayNotices(data.notices);
              lastNoticeCount = currentNoticeCount;
              
              // Show a subtle notification that notices were updated
              showUpdateNotification();
            } else {
              // Check if any notice content has changed by comparing timestamps
              const container = document.getElementById('noticesContainer');
              if (container && data.notices && data.notices.length > 0) {
                const firstNotice = data.notices[0];
                const existingFirstNotice = container.querySelector('.font-semibold');
                
                if (existingFirstNotice && existingFirstNotice.textContent !== firstNotice.tournamentName) {
                  console.log('Notice content changed - refreshing display');
                  displayNotices(data.notices);
                  showUpdateNotification();
                }
              }
            }
          } else {
            console.error('Auto-refresh failed:', data.message);
          }
        })
        .catch(error => {
          console.error('Auto-refresh error:', error);
        });
    }
    
    function showUpdateNotification() {
      // Create a subtle notification
      const notification = document.createElement('div');
      notification.className = 'fixed top-4 right-4 bg-green-500 text-white px-4 py-2 rounded-lg shadow-lg z-50 transform translate-x-full opacity-0 transition-all duration-300';
      notification.innerHTML = '<i class="fas fa-bell mr-2"></i>Tournament notices updated';
      
      document.body.appendChild(notification);
      
      // Animate in
      setTimeout(() => {
        notification.classList.remove('translate-x-full', 'opacity-0');
      }, 100);
      
      // Animate out and remove after 3 seconds
      setTimeout(() => {
        notification.classList.add('translate-x-full', 'opacity-0');
        setTimeout(() => {
          if (notification.parentNode) {
            notification.parentNode.removeChild(notification);
          }
        }, 300);
      }, 3000);
    }
    
    // Store initial notice count when page loads
    window.addEventListener('load', function() {
      const container = document.getElementById('noticesContainer');
      if (container) {
        const noticeCards = container.querySelectorAll('.border-l-4');
        lastNoticeCount = noticeCards.length;
        console.log('Initial notice count:', lastNoticeCount);
      }
    });
    
    // Initialize tournament notices when DOM is ready
    document.addEventListener('DOMContentLoaded', function() {
      // Load tournament notices initially
      loadTournamentNotices();
      
      // Set up auto-refresh for tournament notices
      setupAutoRefresh();
    });
  </script>
  

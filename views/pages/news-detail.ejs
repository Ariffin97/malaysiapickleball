<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= news.title %> - Malaysia Pickleball Association</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="<%= news.title %>">
    <meta property="og:description" content="<%= news.summary %>">
    <% if (news.featuredImage) { %>
    <meta property="og:image" content="<%= news.featuredImage %>">
    <% } %>
    <meta property="og:type" content="article">
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= news.title %>">
    <meta name="twitter:description" content="<%= news.summary %>">
    <% if (news.featuredImage) { %>
    <meta name="twitter:image" content="<%= news.featuredImage %>">
    <% } %>
</head>

<body class="min-h-screen relative overflow-x-hidden bg-gray-50">
    <%- include('../partials/header') %>

    <main class="min-h-screen relative z-10" style="padding-top: var(--navbar-height);">
        <!-- Breadcrumb -->
        <nav class="bg-white shadow-sm">
        <div class="container mx-auto px-4 py-4">
            <div class="flex items-center space-x-2 text-sm text-gray-600">
                <a href="/" class="hover:text-blue-600 transition-colors">Home</a>
                <i class="fas fa-chevron-right text-xs"></i>
                <a href="/news" class="hover:text-blue-600 transition-colors">News</a>
                <i class="fas fa-chevron-right text-xs"></i>
                <span class="text-gray-800 font-medium">Article</span>
            </div>
        </div>
    </nav>

    <!-- Article Content -->
    <article class="py-12">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                
                <!-- Article Header -->
                <header class="mb-8">
                    <!-- Category Badge -->
                    <div class="mb-4">
                        <span class="inline-block bg-blue-100 text-blue-800 px-4 py-2 rounded-full text-sm font-semibold uppercase tracking-wide">
                            <%= news.category %>
                        </span>
                        <% if (news.featured) { %>
                        <span class="inline-block bg-yellow-100 text-yellow-800 px-4 py-2 rounded-full text-sm font-semibold uppercase tracking-wide ml-2">
                            Featured
                        </span>
                        <% } %>
                    </div>

                    <!-- Title -->
                    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 leading-tight mb-6">
                        <%= news.title %>
                    </h1>

                    <!-- Summary -->
                    <p class="text-xl text-gray-600 leading-relaxed mb-8">
                        <%= news.summary %>
                    </p>

                    <!-- Article Meta -->
                    <div class="flex flex-wrap items-center gap-6 text-sm text-gray-500 pb-8 border-b border-gray-200">
                        <div class="flex items-center">
                            <i class="fas fa-user mr-2"></i>
                            <span>By <strong class="text-gray-700"><%= news.author %></strong></span>
                        </div>
                        <div class="flex items-center">
                            <i class="fas fa-calendar mr-2"></i>
                            <span><%= new Date(news.publishedAt).toLocaleDateString('en-GB', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
                        </div>
                        <div class="flex items-center">
                            <i class="fas fa-eye mr-2"></i>
                            <span><%= news.viewCount || 0 %> views</span>
                        </div>
                        <div class="flex items-center">
                            <i class="fas fa-clock mr-2"></i>
                            <span><%= Math.ceil(news.content.split(' ').length / 200) %> min read</span>
                        </div>
                    </div>
                </header>

                <!-- Featured Media -->
                <% if (news.featuredImage || news.featuredVideo) { %>
                <div class="mb-12">
                    <div class="rounded-2xl overflow-hidden shadow-lg">
                        <% if (news.mediaType === 'image' && news.featuredImage) { %>
                            <img src="<%= news.featuredImage %>" alt="<%= news.title %>" 
                                 class="w-full h-96 object-cover"
                                 onerror="this.parentElement.innerHTML='<div class=&quot;w-full h-96 bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center&quot;><i class=&quot;fas fa-newspaper text-6xl text-white&quot;></i></div>'">
                        <% } else if (news.mediaType === 'video' && news.featuredVideo) { %>
                            <video controls class="w-full h-96 object-cover">
                                <source src="<%= news.featuredVideo %>" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        <% } %>
                    </div>
                </div>
                <% } %>

                <!-- Article Content -->
                <div class="prose prose-lg prose-blue max-w-none mb-12">
                    <div class="text-gray-800 leading-relaxed text-lg">
                        <%- news.content.replace(/\n/g, '</p><p class="mb-6">') %>
                    </div>
                </div>

                <!-- Tags -->
                <% if (news.tags && news.tags.length > 0) { %>
                <div class="mb-12">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">Tags</h3>
                    <div class="flex flex-wrap gap-2">
                        <% news.tags.forEach(function(tag) { %>
                        <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm hover:bg-gray-200 transition-colors">
                            #<%= tag %>
                        </span>
                        <% }); %>
                    </div>
                </div>
                <% } %>

                <!-- Social Sharing -->
                <div class="mb-12 p-6 bg-gray-100 rounded-2xl">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">Share this article</h3>
                    <div class="flex flex-wrap gap-3">
                        <a href="https://www.facebook.com/sharer/sharer.php?u=<%= encodeURIComponent(articleUrl) %>" 
                           target="_blank" rel="noopener"
                           class="flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                            <i class="fab fa-facebook-f mr-2"></i>
                            Facebook
                        </a>
                        <a href="https://twitter.com/intent/tweet?text=<%= encodeURIComponent(news.title) %>&url=<%= encodeURIComponent(articleUrl) %>" 
                           target="_blank" rel="noopener"
                           class="flex items-center px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors">
                            <i class="fab fa-twitter mr-2"></i>
                            Twitter
                        </a>
                        <a href="https://www.linkedin.com/sharing/share-offsite/?url=<%= encodeURIComponent(articleUrl) %>" 
                           target="_blank" rel="noopener"
                           class="flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                            <i class="fab fa-linkedin-in mr-2"></i>
                            LinkedIn
                        </a>
                        <button onclick="copyToClipboard()" 
                                class="flex items-center px-4 py-2 bg-blue-700 text-white rounded-lg hover:bg-blue-800 transition-colors">
                            <i class="fas fa-link mr-2"></i>
                            Copy Link
                        </button>
                    </div>
                </div>

                <!-- Back to News -->
                <div class="text-center mb-12">
                    <a href="/news" class="inline-flex items-center px-8 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Back to All News
                    </a>
                </div>
            </div>
        </div>
    </article>

    <!-- Related Articles -->
    <% if (relatedNews && relatedNews.length > 0) { %>
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <div class="max-w-6xl mx-auto">
                <div class="text-center mb-12">
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">Related Articles</h2>
                    <div class="w-20 h-1 bg-gradient-to-r from-blue-500 to-purple-600 mx-auto"></div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <% relatedNews.forEach(function(article) { %>
                    <article class="group cursor-pointer" onclick="location.href='/news/<%= article._id %>'">
                        <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 hover:shadow-xl transition-all duration-300 hover:scale-105">
                            <!-- Image -->
                            <div class="relative h-48 bg-gradient-to-br from-gray-400 to-gray-600 overflow-hidden">
                                <% if (article.featuredImage) { %>
                                    <img src="<%= article.featuredImage %>" alt="<%= article.title %>" 
                                         class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                                         onerror="this.parentElement.innerHTML='<div class=&quot;w-full h-full bg-gradient-to-br from-gray-400 to-gray-600 flex items-center justify-center&quot;><i class=&quot;fas fa-newspaper text-2xl text-white&quot;></i></div>'">
                                <% } else { %>
                                    <div class="w-full h-full bg-gradient-to-br from-gray-400 to-gray-600 flex items-center justify-center">
                                        <i class="fas fa-newspaper text-2xl text-white"></i>
                                    </div>
                                <% } %>
                                
                                <!-- Category Badge -->
                                <div class="absolute top-3 left-3">
                                    <span class="bg-white bg-opacity-90 text-gray-800 px-2 py-1 rounded-full text-xs font-semibold uppercase">
                                        <%= article.category %>
                                    </span>
                                </div>
                            </div>

                            <!-- Content -->
                            <div class="p-6">
                                <div class="flex items-center text-xs text-gray-500 mb-2">
                                    <i class="fas fa-calendar mr-1"></i>
                                    <span><%= new Date(article.publishedAt).toLocaleDateString('en-GB') %></span>
                                    <span class="mx-1">â€¢</span>
                                    <i class="fas fa-eye mr-1"></i>
                                    <span><%= article.viewCount || 0 %> views</span>
                                </div>
                                
                                <h3 class="text-base font-bold text-gray-800 mb-2 group-hover:text-blue-600 transition-colors line-clamp-2">
                                    <%= article.title %>
                                </h3>
                                
                                <p class="text-gray-600 text-xs leading-relaxed line-clamp-3">
                                    <%= article.summary || article.content ? (article.summary || article.content).substring(0, 100) : 'Brief summary...' %>
                                </p>
                            </div>
                        </div>
                    </article>
                    <% }); %>
                </div>
            </div>
        </div>
    </section>
    <% } %>
    </main>

    <%- include('../partials/footer') %>

    <!-- Custom Styles -->
    <style>
        /* Line-clamp utilities moved to main styles.css */
        
        .prose p {
            margin-bottom: 1.5rem;
        }
        
        .prose p:first-child {
            margin-top: 0;
        }
        
        .prose p:last-child {
            margin-bottom: 0;
        }
    </style>

    <!-- JavaScript -->
    <script>
        function copyToClipboard() {
            const url = window.location.href;
            navigator.clipboard.writeText(url).then(function() {
                // Show temporary success message
                const button = event.target.closest('button');
                const originalText = button.innerHTML;
                button.innerHTML = '<i class="fas fa-check mr-2"></i>Copied!';
                button.classList.add('bg-green-600');
                button.classList.remove('bg-gray-600');
                
                setTimeout(function() {
                    button.innerHTML = originalText;
                    button.classList.remove('bg-green-600');
                    button.classList.add('bg-gray-600');
                }, 2000);
            }).catch(function() {
                alert('Failed to copy link. Please copy manually: ' + url);
            });
        }
    </script>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home - Malaysia Pickleball Association</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    /* Smooth scrolling optimizations for all devices */
    * {
      -webkit-overflow-scrolling: touch;
    }
    
    html {
      scroll-behavior: smooth;
      -webkit-text-size-adjust: 100%;
      -ms-text-size-adjust: 100%;
    }
    
    body {
      -webkit-overflow-scrolling: touch;
      overscroll-behavior: contain;
      scroll-behavior: smooth;
    }
    
    /* Mobile-specific smooth scrolling improvements */
    @media (max-width: 768px) {
      * {
        -webkit-transform: translateZ(0);
        transform: translateZ(0);
        -webkit-backface-visibility: hidden;
        backface-visibility: hidden;
        -webkit-perspective: 1000;
        perspective: 1000;
      }
      
      body {
        -webkit-overflow-scrolling: touch;
        overflow-x: hidden;
        overscroll-behavior-y: contain;
        scroll-behavior: smooth;
      }
      
      /* Reduce animations on mobile for better performance */
      .video-container:hover {
        transform: translateY(-4px) scale(1.01);
      }
      
      .feature-card:hover {
        transform: translateY(-6px) scale(1.01);
      }
      
      /* Optimize floating elements for mobile */
      .floating-element {
        will-change: transform;
        animation-duration: 8s;
      }
      
      /* Reduce backdrop blur on mobile for better performance */
      .backdrop-blur-md {
        backdrop-filter: blur(4px);
      }
      
      .backdrop-blur-sm {
        backdrop-filter: blur(2px);
      }
    }
    
    /* Ultra-smooth scrolling for iOS Safari */
    @supports (-webkit-overflow-scrolling: touch) {
      body {
        -webkit-overflow-scrolling: touch;
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0);
      }
    }
    .hero-section {
      background: linear-gradient(135deg, rgba(0,0,0,0.7), rgba(0,0,0,0.4));
      position: relative;
      overflow: hidden;
      margin-top: 0;
      padding-top: 2rem; /* Minimal padding to start right after navbar */
    }
    
    /* Mobile adjustments */
    @media (max-width: 640px) {
      .hero-section {
        padding-top: 1rem;
      }
    }
    
    @media (min-width: 641px) and (max-width: 1024px) {
      .hero-section {
        padding-top: 1.5rem;
      }
    }
    
    .hero-content {
      animation: fadeInUp 1s ease-out;
    }
    
    .feature-card {
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }
    
    .feature-card:hover {
      transform: translateY(-12px) scale(1.02);
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
      background: rgba(255, 255, 255, 0.98);
    }
    
    .feature-icon {
      transition: all 0.3s ease;
    }
    
    .feature-card:hover .feature-icon {
      transform: scale(1.2) rotate(5deg);
    }
    
    .stat-number {
      animation: countUp 2s ease-out;
    }
    
    .floating-element {
      animation: float 6s ease-in-out infinite;
    }
    
    .floating-element:nth-child(2n) {
      animation-delay: -3s;
    }
    
    .news-card {
      transition: all 0.3s ease;
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(10px);
    }
    
    .news-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    }
    
    .cta-button {
      background: linear-gradient(135deg, #059669, #047857);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }
    
    .cta-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 25px rgba(5, 150, 105, 0.4);
    }
    
    .cta-button::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
      transition: left 0.5s;
    }
    
    .cta-button:hover::before {
      left: 100%;
    }
    
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-20px); }
    }
    
    @keyframes countUp {
      from { opacity: 0; transform: scale(0.5); }
      to { opacity: 1; transform: scale(1); }
    }
    
    .parallax-bg {
      transform: translateZ(0);
      backface-visibility: hidden;
    }
    
    /* Ensure proper main content positioning */
    main {
      position: relative;
      z-index: 10;
    }
    
    /* Adjust content positioning for navbar */
    @media (max-width: 768px) {
      main {
        margin-left: 0 !important;
      }
    }
    
    /* Enhanced Video Section Styles */
    .video-container {
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
    }
    
    .video-container:hover {
      transform: translateY(-8px) scale(1.02);
    }
    
    .video-container::before {
      content: '';
      position: absolute;
      top: -3px;
      left: -3px;
      right: -3px;
      bottom: -3px;
      background: linear-gradient(45deg, #3b82f6, #8b5cf6, #06b6d4, #10b981);
      border-radius: 1.75rem;
      opacity: 0;
      transition: opacity 0.3s ease;
      z-index: -1;
      filter: blur(8px);
    }
    
    .video-container:hover::before {
      opacity: 0.6;
    }
    
    .video-placeholder {
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
    }
    
    .video-placeholder::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
      transition: left 0.8s ease;
    }
    
    .video-placeholder:hover::before {
      left: 100%;
    }
    
    /* Enhanced responsive video aspect ratio */
    .aspect-w-16 {
      position: relative;
      padding-bottom: 56.25%; /* 16:9 aspect ratio */
      overflow: hidden;
    }
    
    .aspect-w-16 iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border: none;
      border-radius: 1.5rem 1.5rem 0 0;
      z-index: 10;
      pointer-events: auto;
    }
    
    /* Custom animations */
    @keyframes float-gentle {
      0%, 100% { transform: translateY(0px) rotate(0deg); }
      50% { transform: translateY(-8px) rotate(2deg); }
    }
    
    .animate-float-gentle {
      animation: float-gentle 4s ease-in-out infinite;
    }
    
    /* Gradient background animation */
    @keyframes gradient-shift {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }
    
    .animate-gradient-bg {
      background-size: 200% 200%;
      animation: gradient-shift 8s ease infinite;
    }
    
    /* Enhanced shadows */
    .shadow-video {
      box-shadow: 
        0 20px 25px -5px rgba(0, 0, 0, 0.1),
        0 10px 10px -5px rgba(0, 0, 0, 0.04),
        0 0 0 1px rgba(255, 255, 255, 0.05);
    }
    
    .shadow-video-hover {
      box-shadow: 
        0 25px 50px -12px rgba(0, 0, 0, 0.25),
        0 0 0 1px rgba(255, 255, 255, 0.1),
        0 0 20px rgba(59, 130, 246, 0.15);
    }
    
    /* Mobile video adjustments */
    @media (max-width: 1024px) {
      .video-container {
        will-change: transform;
      }
      
      .video-container:hover {
        transform: translateY(-4px) scale(1.01);
      }
      
      .video-container::before {
        display: none;
      }
    }
    
    @media (max-width: 640px) {
      .video-container {
        will-change: transform;
        transition: transform 0.3s ease;
      }
      
      .video-container:hover {
        transform: translateY(-2px);
      }
      
      .aspect-w-16 iframe {
        border-radius: 1rem 1rem 0 0;
      }
      
      /* Optimize all animations for mobile */
      .feature-card {
        will-change: transform;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }
      
      .hero-content {
        animation-duration: 0.8s;
      }
    }
  </style>
</head>

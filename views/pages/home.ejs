  <!-- Popup Modal -->
  <% if (popupMessage && popupMessage.active) { %>
  <div id="popup-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 opacity-0 transition-opacity duration-300">
    <div class="bg-white rounded-2xl shadow-2xl max-w-lg w-full mx-4 transform scale-95 transition-transform duration-300" id="popup-content">
      <div class="relative">
        <!-- Close Button -->
        <button id="close-popup" class="absolute top-4 right-4 text-gray-500 hover:text-gray-700 text-2xl font-bold z-10">
          <i class="fas fa-times"></i>
        </button>
        
        <!-- Popup Image -->
        <% if (popupMessage.image) { %>
        <div class="w-full h-64 bg-gray-200 rounded-t-2xl overflow-hidden">
          <img src="<%= popupMessage.image %>" alt="Popup Image" class="w-full h-full object-cover" id="popup-image">
        </div>
        <% } %>
        
        <!-- Popup Content -->
        <div class="p-6">
          <% if (popupMessage.title) { %>
          <h2 class="text-2xl font-bold text-gray-800 mb-4"><%= popupMessage.title %></h2>
          <% } %>
          
          <% if (popupMessage.content) { %>
          <p class="text-gray-600 mb-6 leading-relaxed"><%= popupMessage.content %></p>
          <% } %>
          
          <div class="flex justify-end">
            <button id="popup-ok-btn" class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition-colors duration-300 font-medium">
              <i class="fas fa-check mr-2"></i>
              Got it!
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% } %>
  
  <script src="/js/script.js"></script>
  <script src="/js/home.js"></script>
</body>
</html>

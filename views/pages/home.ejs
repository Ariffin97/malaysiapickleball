<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home - Malaysia Pickleball Association</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    /* Performance optimizations */
    :root {
      --animation-duration: 0.3s;
      --animation-timing: cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    /* Respect user's motion preferences */
    @media (prefers-reduced-motion: reduce) {
      *, *::before, *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
      }
    }
    
    /* Optimized base styles */
    html {
      scroll-behavior: smooth;
      -webkit-text-size-adjust: 100%;
      -ms-text-size-adjust: 100%;
    }
    
    body {
      -webkit-overflow-scrolling: touch;
      overscroll-behavior: contain;
      scroll-behavior: smooth;
      transform: translateZ(0); /* Hardware acceleration */
    }
    
    /* Optimized hero section */
    .hero-section {
      background: linear-gradient(135deg, rgba(0,0,0,0.7), rgba(0,0,0,0.4));
      position: relative;
      overflow: hidden;
      margin-top: 0;
      padding-top: 2rem;
      will-change: transform;
    }
    
    .hero-content {
      animation: fadeInUp 0.6s ease-out;
      will-change: transform, opacity;
    }
    
    /* Optimized logo animation */
    .hero-logo {
      filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
      animation: logoFloatIn 1s ease-out;
      will-change: transform, opacity;
    }
    
    @keyframes logoFloatIn {
      0% {
        opacity: 0;
        transform: translateY(-20px) scale(0.9);
      }
      100% {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }
    
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    /* Optimized floating elements - reduced count and complexity */
    .floating-element {
      animation: float 8s ease-in-out infinite;
      will-change: transform;
    }
    
    .floating-element:nth-child(2n) {
      animation-delay: -4s;
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-15px); }
    }
    
    /* Optimized video container */
    .video-container {
      transition: transform var(--animation-duration) var(--animation-timing);
      will-change: transform;
    }
    
    .video-container:hover {
      transform: translateY(-4px) scale(1.01);
    }
    
    /* Simplified backdrop effects for better performance */
    .optimized-backdrop {
      backdrop-filter: blur(8px);
      background: rgba(255, 255, 255, 0.1);
    }
    
    /* Optimized responsive video */
    .aspect-w-16 {
      position: relative;
      padding-bottom: 56.25%;
      overflow: hidden;
    }
    
    .aspect-w-16 iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border: none;
      border-radius: 1.5rem 1.5rem 0 0;
    }
    
    /* Optimized buttons */
    .action-button {
      transition: all var(--animation-duration) var(--animation-timing);
      will-change: transform;
    }
    
    .action-button:hover {
      transform: translateY(-2px);
    }
    
    /* Mobile optimizations */
    @media (max-width: 768px) {
      .hero-section {
        padding-top: 1rem;
      }
      
      .hero-logo {
        width: 8rem !important;
        height: 8rem !important;
      }
      
      .floating-element {
        animation-duration: 12s; /* Slower on mobile */
      }
      
      .video-container:hover {
        transform: translateY(-2px);
      }
      
      /* Disable some effects on mobile for better performance */
      .optimized-backdrop {
        backdrop-filter: blur(4px);
      }
    }
    
    /* Tablet optimizations */
    @media (min-width: 641px) and (max-width: 1024px) {
      .hero-section {
        padding-top: 1.5rem;
      }
      
      .video-container:hover {
        transform: translateY(-3px) scale(1.005);
      }
    }
    
    /* Ensure proper content positioning */
    main {
      position: relative;
      z-index: 10;
    }
    
    @media (max-width: 768px) {
      main {
        margin-left: 0 !important;
      }
    }
    
    /* Optimized decorative elements */
    .decorative-bg {
      opacity: 0.1;
      animation: pulse 4s ease-in-out infinite;
    }
    
    .decorative-bg:nth-child(2) {
      animation-delay: 1s;
    }
    
    .decorative-bg:nth-child(3) {
      animation-delay: 2s;
    }
    
    /* Lazy loading optimization */
    .lazy-load {
      opacity: 0;
      transition: opacity 0.3s;
    }
    
    .lazy-load.loaded {
      opacity: 1;
    }
    
    /* Parallax optimization */
    .parallax-bg {
      transform: translateZ(0);
      backface-visibility: hidden;
      will-change: transform;
    }
    
    /* Popup optimizations */
    .popup-modal {
      backdrop-filter: blur(4px);
      will-change: opacity, transform;
    }
    
    .popup-content {
      will-change: transform;
    }
  </style>
</head>
<%
  const defaultBg = backgroundImage || '/images/defaultbg.png';
%>
<body class="bg-gray-100 bg-cover bg-center bg-fixed min-h-screen parallax-bg" style="background-image: url('<%= defaultBg %>')">
  <%- include('../partials/header') %>
  <%- include('../partials/sidebar') %>
  
  <!-- Optimized floating elements - reduced count -->
  <div class="fixed inset-0 pointer-events-none z-0">
    <div class="floating-element absolute top-20 left-10 w-4 h-4 bg-yellow-400 rounded-full opacity-50"></div>
    <div class="floating-element absolute bottom-32 right-20 w-5 h-5 bg-green-400 rounded-full opacity-40"></div>
  </div>
  
  <main class="md:ml-64 min-h-screen relative z-10" style="padding-top: var(--navbar-height);">
    <!-- Optimized Hero Section -->
    <section class="hero-section py-20">
      <div class="container mx-auto px-4">
        <div class="hero-content text-center text-white">
          <!-- Malaysia Pickleball Association Logo -->
          <div class="flex justify-center mb-8">
            <img src="/images/mpa.png" alt="Malaysia Pickleball Association" class="hero-logo w-40 h-40 md:w-52 md:h-52 lg:w-64 lg:h-64 object-contain lazy-load" loading="lazy">
          </div>
          
          <h1 class="text-5xl md:text-7xl font-bold mb-6 leading-tight">
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-green-400">
              Malaysia Pickleball Association
            </span>
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-gray-200 max-w-3xl mx-auto">
            Join the fastest-growing sport in Malaysia. Discover tournaments, connect with coaches, and be part of our vibrant community.
          </p>
          
          <!-- Optimized Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center mt-8">
            
          </div>
        </div>
      </div>
    </section>

    <!-- News Update and Video Section -->
    <section class="py-16 relative overflow-hidden">
      <div class="container mx-auto px-4 relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-7xl mx-auto">
          
          <!-- News Update Section (2x6 grid) -->
          <div class="news-section">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-3xl font-bold text-white">Latest News</h2>
              <a href="/news" class="text-green-400 hover:text-green-300 font-medium flex items-center transition-colors duration-300">
                View All <i class="fas fa-arrow-right ml-2"></i>
              </a>
            </div>
            
            <!-- News Grid (2x6) -->
            <div class="grid grid-cols-2 gap-4 h-96">
              <!-- Main Featured News (Takes 2 columns, 3 rows) -->
              <div class="col-span-2 row-span-3 bg-gradient-to-r from-green-500 to-blue-600 rounded-xl overflow-hidden shadow-2xl group cursor-pointer border border-white border-opacity-10 backdrop-blur-sm">
                <div class="relative h-full p-6 flex flex-col justify-end bg-gradient-to-t from-black/80 to-transparent">
                  <div class="absolute inset-0 bg-cover bg-center opacity-20" style="background-image: url('/images/pic1.png');"></div>
                  <div class="relative z-10">
                    <span class="inline-block px-3 py-1 bg-red-500 text-white text-xs font-bold rounded-full mb-3 shadow-lg">BREAKING</span>
                    <h3 class="text-xl font-bold text-white mb-2 group-hover:text-yellow-200 transition-colors">Malaysia Pickleball Championship 2025 Registration Now Open</h3>
                    <p class="text-gray-200 text-sm mb-3">Join the biggest pickleball tournament in Malaysia. Register now for early bird pricing.</p>
                    <div class="flex items-center text-gray-300 text-xs">
                      <i class="fas fa-calendar mr-2"></i>
                      <span>January 25, 2025</span>
                    </div>
                  </div>
                </div>
              </div>
              
              <!-- News Item 2 -->
              <div class="col-span-1 row-span-2 bg-gray-800 bg-opacity-60 backdrop-blur-sm rounded-xl border border-white border-opacity-10 shadow-xl hover:shadow-2xl transition-all duration-300 group cursor-pointer hover:bg-opacity-80">
                <div class="h-24 bg-gradient-to-r from-blue-400 to-purple-500 rounded-t-xl"></div>
                <div class="p-4">
                  <h4 class="font-semibold text-white mb-2 group-hover:text-green-400 transition-colors text-sm">New Coaching Program Launch</h4>
                  <p class="text-gray-300 text-xs mb-2">Professional coaching now available in KL and Selangor areas.</p>
                  <div class="flex items-center text-gray-400 text-xs">
                    <i class="fas fa-clock mr-1"></i>
                    <span>2 days ago</span>
                  </div>
                </div>
              </div>
              
              <!-- News Item 3 -->
              <div class="col-span-1 row-span-2 bg-gray-800 bg-opacity-60 backdrop-blur-sm rounded-xl border border-white border-opacity-10 shadow-xl hover:shadow-2xl transition-all duration-300 group cursor-pointer hover:bg-opacity-80">
                <div class="h-24 bg-gradient-to-r from-yellow-400 to-orange-500 rounded-t-xl"></div>
                <div class="p-4">
                  <h4 class="font-semibold text-white mb-2 group-hover:text-green-400 transition-colors text-sm">Sarawak Open Results</h4>
                  <p class="text-gray-300 text-xs mb-2">Congratulations to all participants in the recent Sarawak tournament.</p>
                  <div class="flex items-center text-gray-400 text-xs">
                    <i class="fas fa-clock mr-1"></i>
                    <span>5 days ago</span>
                  </div>
                </div>
              </div>
              
              <!-- News Item 4 -->
              <div class="col-span-1 row-span-1 bg-gradient-to-r from-green-400 to-teal-500 rounded-xl p-3 text-white group cursor-pointer shadow-xl hover:shadow-2xl transition-all duration-300 border border-white border-opacity-20">
                <h4 class="font-semibold text-sm mb-1 group-hover:text-yellow-200 transition-colors">Equipment Sale</h4>
                <p class="text-xs opacity-90">Up to 30% off on paddles</p>
              </div>
              
              <!-- News Item 5 -->
              <div class="col-span-1 row-span-1 bg-gradient-to-r from-purple-400 to-pink-500 rounded-xl p-3 text-white group cursor-pointer shadow-xl hover:shadow-2xl transition-all duration-300 border border-white border-opacity-20">
                <h4 class="font-semibold text-sm mb-1 group-hover:text-yellow-200 transition-colors">Venue Update</h4>
                <p class="text-xs opacity-90">New courts in Penang</p>
              </div>
            </div>
          </div>
          
          <!-- Video Section (Same height as news) -->
          <div class="video-section">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-3xl font-bold text-white">Featured Videos</h2>
              <a href="/videos" class="text-green-400 hover:text-green-300 font-medium flex items-center transition-colors duration-300">
                View All <i class="fas fa-arrow-right ml-2"></i>
              </a>
            </div>
            
            <div class="space-y-4 h-96">
              <!-- Main Video -->
              <% if (video1) { %>
              <div class="video-container group h-64">
                <div class="bg-gray-800 bg-opacity-60 backdrop-blur-sm rounded-xl shadow-2xl overflow-hidden border border-white border-opacity-10 h-full hover:bg-opacity-80 transition-all duration-300">
                  <div class="relative h-48 bg-gray-900 overflow-hidden">
                    <%- video1 %>
                    <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
                  </div>
                  <div class="p-4">
                    <div class="flex items-center justify-between">
                      <div class="flex items-center space-x-3">
                        <div class="w-8 h-8 bg-red-500 rounded-lg flex items-center justify-center shadow-lg">
                          <i class="fas fa-play text-white text-sm"></i>
                        </div>
                        <div>
                          <h3 class="font-bold text-white text-sm"><%= video1Type || 'Featured Video' %></h3>
                          <p class="text-xs text-gray-300">Pickleball Content</p>
                        </div>
                      </div>
                      <div class="flex items-center space-x-1 bg-red-500 bg-opacity-20 px-2 py-1 rounded-full border border-red-400 border-opacity-30">
                        <i class="fab fa-youtube text-red-400 text-xs"></i>
                        <span class="text-xs font-medium text-red-300">YouTube</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <% } else { %>
              <div class="video-container h-64 border-2 border-dashed border-gray-600 rounded-xl flex items-center justify-center bg-gray-800 bg-opacity-30 backdrop-blur-sm">
                <div class="text-center">
                  <div class="w-12 h-12 bg-gray-700 rounded-xl flex items-center justify-center mx-auto mb-3">
                    <i class="fas fa-video text-gray-400 text-xl"></i>
                  </div>
                  <h3 class="font-bold text-gray-300 mb-1">Featured Video</h3>
                  <p class="text-gray-500 text-sm">No video configured yet</p>
                </div>
              </div>
              <% } %>
              
              <!-- Secondary Video -->
              <% if (video2) { %>
              <div class="video-container group h-28">
                <div class="bg-gray-800 bg-opacity-60 backdrop-blur-sm rounded-xl shadow-xl overflow-hidden border border-white border-opacity-10 h-full flex hover:bg-opacity-80 transition-all duration-300">
                  <div class="relative w-32 bg-gray-900 overflow-hidden">
                    <%- video2 %>
                  </div>
                  <div class="flex-1 p-3 flex flex-col justify-center">
                    <h4 class="font-semibold text-white text-sm mb-1 group-hover:text-green-400 transition-colors"><%= video2Type || 'Secondary Video' %></h4>
                    <p class="text-xs text-gray-300 mb-2">Additional pickleball content</p>
                    <div class="flex items-center space-x-1">
                      <i class="fab fa-youtube text-red-400 text-xs"></i>
                      <span class="text-xs text-gray-400">YouTube</span>
                    </div>
                  </div>
                </div>
              </div>
              <% } else { %>
              <div class="h-28 border border-gray-600 rounded-xl flex items-center justify-center bg-gray-800 bg-opacity-30 backdrop-blur-sm">
                <div class="text-center">
                  <i class="fas fa-video text-gray-400 text-lg mb-1"></i>
                  <p class="text-gray-400 text-xs">Secondary Video</p>
                </div>
              </div>
              <% } %>
            </div>
          </div>
          
        </div>
      </div>
    </section>

    <div class="container mx-auto px-4 space-y-16">
      <!-- Additional content can be added here -->
    </div>
  </main>
  
  <%- include('../partials/footer') %>
  
  <!-- Optimized Popup Modal -->
  <% if (popupMessage && popupMessage.active) { %>
  <div id="popup-modal" class="popup-modal fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 opacity-0 transition-opacity duration-300">
    <div class="popup-content bg-white rounded-2xl shadow-2xl max-w-lg w-full mx-4 transform scale-95 transition-transform duration-300">
      <div class="relative">
        <button id="close-popup" class="absolute top-4 right-4 text-gray-500 hover:text-gray-700 text-2xl font-bold z-10">
          <i class="fas fa-times"></i>
        </button>
        
        <% if (popupMessage.image) { %>
        <div class="w-full h-64 bg-gray-200 rounded-t-2xl overflow-hidden">
          <img src="<%= popupMessage.image %>" alt="Popup Image" class="w-full h-full object-cover lazy-load" loading="lazy">
        </div>
        <% } %>
        
        <div class="p-6">
          <% if (popupMessage.title) { %>
          <h2 class="text-2xl font-bold text-gray-800 mb-4"><%= popupMessage.title %></h2>
          <% } %>
          
          <% if (popupMessage.content) { %>
          <p class="text-gray-600 mb-6 leading-relaxed"><%= popupMessage.content %></p>
          <% } %>
          
          <div class="flex justify-end">
            <button id="popup-ok-btn" class="action-button bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 font-medium">
              <i class="fas fa-check mr-2"></i>
              Got it!
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% } %>
  
  <script>
    // Optimized lazy loading
    document.addEventListener('DOMContentLoaded', function() {
      const lazyImages = document.querySelectorAll('.lazy-load');
      
      if ('IntersectionObserver' in window) {
        const imageObserver = new IntersectionObserver((entries, observer) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              const img = entry.target;
              img.classList.add('loaded');
              observer.unobserve(img);
            }
          });
        });
        
        lazyImages.forEach(img => imageObserver.observe(img));
      } else {
        // Fallback for older browsers
        lazyImages.forEach(img => img.classList.add('loaded'));
      }
      
      // Optimize popup modal
      const popupModal = document.getElementById('popup-modal');
      const closePopup = document.getElementById('close-popup');
      const popupOk = document.getElementById('popup-ok-btn');
      
      if (popupModal) {
        // Show popup with optimized animation
        setTimeout(() => {
          popupModal.style.opacity = '1';
          popupModal.querySelector('.popup-content').style.transform = 'scale(1)';
        }, 100);
        
        // Close popup handlers
        const closeHandler = () => {
          popupModal.style.opacity = '0';
          popupModal.querySelector('.popup-content').style.transform = 'scale(0.95)';
          setTimeout(() => popupModal.remove(), 300);
        };
        
        if (closePopup) closePopup.addEventListener('click', closeHandler);
        if (popupOk) popupOk.addEventListener('click', closeHandler);
        
        // Close on backdrop click
        popupModal.addEventListener('click', (e) => {
          if (e.target === popupModal) closeHandler();
        });
      }
    });
  </script>
  
  <script src="/js/script.js"></script>
  <script src="/js/home.js"></script>
</body>
</html>

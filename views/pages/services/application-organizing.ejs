<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Organizing Application - Malaysia Pickleball Association</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    .process-step {
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .process-step:hover {
      transform: translateY(-8px) scale(1.02);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }
    
    .step-icon {
      transition: all 0.3s ease;
    }
    
    .process-step:hover .step-icon {
      transform: scale(1.2) rotate(5deg);
    }
    
    .fade-in {
      animation: fadeInUp 0.8s ease-out;
    }
    
    .fade-in-delay {
      animation: fadeInUp 0.8s ease-out 0.2s both;
    }
    
    .fade-in-delay-2 {
      animation: fadeInUp 0.8s ease-out 0.4s both;
    }
    
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .interactive-card {
      transition: all 0.3s ease;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
    }
    
    .interactive-card:hover {
      background: rgba(255, 255, 255, 0.98);
      transform: translateY(-2px);
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
    }
    
    .cta-button {
      background: linear-gradient(135deg, #059669, #047857);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }
    
    .cta-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 25px rgba(5, 150, 105, 0.4);
    }
    
    .cta-button::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
      transition: left 0.5s;
    }
    
    .cta-button:hover::before {
      left: 100%;
    }
    
    .progress-bar {
      height: 4px;
      background: linear-gradient(90deg, #059669, #10b981, #34d399);
      border-radius: 2px;
      animation: progressGrow 2s ease-out;
    }
    
    @keyframes progressGrow {
      from { width: 0%; }
      to { width: 100%; }
    }
    
    .requirement-item {
      transition: all 0.3s ease;
      cursor: pointer;
    }
    
    .requirement-item:hover {
      background: rgba(5, 150, 105, 0.05);
      border-left: 4px solid #059669;
      padding-left: 1.5rem;
    }
    
    @media (max-width: 768px) {
      .process-step {
        margin-bottom: 1.5rem;
      }
      
      .hero-title {
        font-size: 2rem !important;
      }
    }
  </style>
</head>
<%
  const defaultBg = backgroundImage || '/images/defaultbg.png';
%>
<body class="bg-gray-100 bg-cover bg-center bg-fixed min-h-screen" style="background-image: url('<%= defaultBg %>')">
  <%- include('../../partials/header') %>
  <%- include('../../partials/sidebar') %>
  
  <main class="md:ml-64 pt-24 sm:pt-28 lg:pt-32 p-4 pb-20 min-h-screen">
    <div class="container mx-auto max-w-6xl">
      <!-- Hero Section -->
      <div class="interactive-card p-8 rounded-2xl shadow-xl mb-8 text-center fade-in">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-r from-green-500 to-blue-500 rounded-full mb-6">
          <i class="fas fa-calendar-plus text-white text-3xl"></i>
        </div>
        <h1 class="hero-title text-4xl md:text-5xl font-bold mb-4 text-gray-800 bg-gradient-to-r from-green-600 to-blue-600 bg-clip-text text-transparent">
          Organize Sports Events
        </h1>
        <p class="text-xl text-gray-600 mb-6 max-w-3xl mx-auto">
          Transform your vision into reality. Follow our comprehensive guide to organize world-class sports competitions in Malaysia.
        </p>
        <div class="progress-bar w-full mb-4"></div>
        <div class="flex flex-wrap justify-center gap-4">
          <button class="cta-button text-white px-8 py-3 rounded-xl font-bold text-lg" onclick="scrollToSection('process')">
            <i class="fas fa-rocket mr-2"></i>
            Start Your Journey
          </button>
          <button class="bg-white bg-opacity-90 text-gray-700 px-8 py-3 rounded-xl font-bold text-lg hover:bg-opacity-100 transition-all duration-300" onclick="scrollToSection('requirements')">
            <i class="fas fa-list-check mr-2"></i>
            View Requirements
          </button>
        </div>
      </div>

      <!-- Process Steps -->
      <section id="process" class="mb-12 fade-in-delay">
        <h2 class="text-3xl font-bold text-center mb-8 text-gray-800">
          <i class="fas fa-route text-green-600 mr-3"></i>
          Application Process
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <!-- Step 1 -->
          <div class="process-step interactive-card p-6 rounded-xl text-center relative">
            <div class="step-icon inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-blue-500 to-blue-600 rounded-full mb-4">
              <i class="fas fa-file-text text-white text-2xl"></i>
            </div>
            <div class="absolute -top-2 -right-2 bg-blue-500 text-white rounded-full w-8 h-8 flex items-center justify-center text-sm font-bold">
              1
            </div>
            <h3 class="text-xl font-bold mb-3 text-gray-800">Prepare Documents</h3>
            <p class="text-gray-600">Gather all required documentation and ensure compliance</p>
          </div>

          <!-- Step 2 -->
          <div class="process-step interactive-card p-6 rounded-xl text-center relative">
            <div class="step-icon inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-green-500 to-green-600 rounded-full mb-4">
              <i class="fas fa-upload text-white text-2xl"></i>
            </div>
            <div class="absolute -top-2 -right-2 bg-green-500 text-white rounded-full w-8 h-8 flex items-center justify-center text-sm font-bold">
              2
            </div>
            <h3 class="text-xl font-bold mb-3 text-gray-800">Submit Application</h3>
            <p class="text-gray-600">Submit your application through our online portal</p>
          </div>

          <!-- Step 3 -->
          <div class="process-step interactive-card p-6 rounded-xl text-center relative">
            <div class="step-icon inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-yellow-500 to-orange-500 rounded-full mb-4">
              <i class="fas fa-search text-white text-2xl"></i>
            </div>
            <div class="absolute -top-2 -right-2 bg-yellow-500 text-white rounded-full w-8 h-8 flex items-center justify-center text-sm font-bold">
              3
            </div>
            <h3 class="text-xl font-bold mb-3 text-gray-800">Review Process</h3>
            <p class="text-gray-600">Our team will review and evaluate your application</p>
          </div>

          <!-- Step 4 -->
          <div class="process-step interactive-card p-6 rounded-xl text-center relative">
            <div class="step-icon inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-purple-500 to-purple-600 rounded-full mb-4">
              <i class="fas fa-check-circle text-white text-2xl"></i>
            </div>
            <div class="absolute -top-2 -right-2 bg-purple-500 text-white rounded-full w-8 h-8 flex items-center justify-center text-sm font-bold">
              4
            </div>
            <h3 class="text-xl font-bold mb-3 text-gray-800">Get Approval</h3>
            <p class="text-gray-600">Receive approval and start organizing your event</p>
          </div>
        </div>
      </section>

      <!-- Requirements Section -->
      <section id="requirements" class="mb-12 fade-in-delay-2">
        <h2 class="text-3xl font-bold text-center mb-8 text-gray-800">
          <i class="fas fa-clipboard-list text-green-600 mr-3"></i>
          Requirements Checklist
        </h2>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <!-- Documentation Requirements -->
          <div class="interactive-card p-6 rounded-xl">
            <h3 class="text-2xl font-bold mb-6 text-gray-800 flex items-center">
              <i class="fas fa-folder-open text-blue-600 mr-3"></i>
              Documentation
            </h3>
            <div class="space-y-4">
              <div class="requirement-item p-4 rounded-lg transition-all duration-300">
                <div class="flex items-center">
                  <i class="fas fa-certificate text-green-500 mr-3"></i>
                  <span class="font-semibold">Registration Certificate</span>
                </div>
                <p class="text-gray-600 ml-6 mt-1">Valid organization registration under Act 576</p>
              </div>
              
              <div class="requirement-item p-4 rounded-lg transition-all duration-300">
                <div class="flex items-center">
                  <i class="fas fa-id-card text-blue-500 mr-3"></i>
                  <span class="font-semibold">Authorized Representative ID</span>
                </div>
                <p class="text-gray-600 ml-6 mt-1">Valid identification of application submitter</p>
              </div>
              
              <div class="requirement-item p-4 rounded-lg transition-all duration-300">
                <div class="flex items-center">
                  <i class="fas fa-file-contract text-purple-500 mr-3"></i>
                  <span class="font-semibold">Event Proposal</span>
                </div>
                <p class="text-gray-600 ml-6 mt-1">Detailed event plan and competition format</p>
              </div>
            </div>
          </div>

          <!-- Technical Requirements -->
          <div class="interactive-card p-6 rounded-xl">
            <h3 class="text-2xl font-bold mb-6 text-gray-800 flex items-center">
              <i class="fas fa-cogs text-green-600 mr-3"></i>
              Technical Specs
            </h3>
            <div class="space-y-4">
              <div class="requirement-item p-4 rounded-lg transition-all duration-300">
                <div class="flex items-center">
                  <i class="fas fa-map-marker-alt text-red-500 mr-3"></i>
                  <span class="font-semibold">Venue Specifications</span>
                </div>
                <p class="text-gray-600 ml-6 mt-1">Approved facilities meeting safety standards</p>
              </div>
              
              <div class="requirement-item p-4 rounded-lg transition-all duration-300">
                <div class="flex items-center">
                  <i class="fas fa-shield-alt text-orange-500 mr-3"></i>
                  <span class="font-semibold">Insurance Coverage</span>
                </div>
                <p class="text-gray-600 ml-6 mt-1">Comprehensive event and participant insurance</p>
              </div>
              
              <div class="requirement-item p-4 rounded-lg transition-all duration-300">
                <div class="flex items-center">
                  <i class="fas fa-users text-indigo-500 mr-3"></i>
                  <span class="font-semibold">Qualified Staff</span>
                </div>
                <p class="text-gray-600 ml-6 mt-1">Certified referees and technical officials</p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Application Portal -->
      <section class="interactive-card p-8 rounded-2xl text-center mb-12 fade-in-delay-2">
        <h2 class="text-3xl font-bold mb-6 text-gray-800">
          <i class="fas fa-rocket text-green-600 mr-3"></i>
          Ready to Start?
        </h2>
        <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
          Begin your event organization journey today. Access our online application portal for a streamlined submission process.
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <div class="text-center">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 rounded-full mb-4">
              <i class="fas fa-clock text-blue-600 text-2xl"></i>
            </div>
            <h4 class="font-bold text-gray-800">Fast Process</h4>
            <p class="text-gray-600">Quick application review</p>
          </div>
          
          <div class="text-center">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-4">
              <i class="fas fa-headset text-green-600 text-2xl"></i>
            </div>
            <h4 class="font-bold text-gray-800">Expert Support</h4>
            <p class="text-gray-600">Dedicated assistance team</p>
          </div>
          
          <div class="text-center">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-purple-100 rounded-full mb-4">
              <i class="fas fa-award text-purple-600 text-2xl"></i>
            </div>
            <h4 class="font-bold text-gray-800">Official Recognition</h4>
            <p class="text-gray-600">Government approved events</p>
          </div>
        </div>
        
        <div class="flex flex-wrap justify-center gap-4">
          <a href="http://erosa.kbs.gov.my" target="_blank" class="cta-button text-white px-8 py-4 rounded-xl font-bold text-lg inline-flex items-center">
            <i class="fas fa-external-link-alt mr-2"></i>
            Apply Online Now
          </a>
          <button class="bg-gray-200 text-gray-700 px-8 py-4 rounded-xl font-bold text-lg hover:bg-gray-300 transition-all duration-300" onclick="downloadGuide()">
            <i class="fas fa-download mr-2"></i>
            Download Guide
          </button>
        </div>
      </section>

      <!-- Infographic Section -->
      <section class="interactive-card p-8 rounded-2xl text-center fade-in-delay-2">
        <h2 class="text-3xl font-bold mb-6 text-gray-800">
          <i class="fas fa-chart-line text-green-600 mr-3"></i>
          Application Process Overview
        </h2>
        <div class="overflow-hidden rounded-xl shadow-lg">
          <img src="/images/pic4.png" alt="Organizing Application Infographic" class="w-full h-auto transition-transform duration-500 hover:scale-105">
        </div>
      </section>

      <!-- Footer Info -->
      <div class="text-center mt-8 text-gray-600 text-sm interactive-card p-4 rounded-lg shadow">
        <p class="mb-2">
          <i class="fas fa-flag text-red-500 mr-2"></i>
          Government of Malaysia
        </p>
        <p>
          <i class="fas fa-heart text-red-500 mr-2"></i>
          Madani
        </p>
      </div>
    </div>
  </main>

  <%- include('../../partials/footer') %>
  <script src="/js/script.js"></script>
  <script>
    // Smooth scrolling function
    function scrollToSection(sectionId) {
      document.getElementById(sectionId).scrollIntoView({
        behavior: 'smooth',
        block: 'start'
      });
    }
    
    // Download guide function
    function downloadGuide() {
      // Create a temporary download link
      const link = document.createElement('a');
      link.href = '/images/pic4.png';
      link.download = 'Event-Organization-Guide.png';
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
    }
    
    // Intersection Observer for animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.animationPlayState = 'running';
        }
      });
    }, observerOptions);

    // Observe all animated elements
    document.querySelectorAll('.fade-in, .fade-in-delay, .fade-in-delay-2, .process-step').forEach(el => {
      observer.observe(el);
    });

    // Add hover sound effect (optional)
    document.querySelectorAll('.process-step, .requirement-item').forEach(item => {
      item.addEventListener('mouseenter', () => {
        // Optional: Add subtle sound or haptic feedback
      });
    });
    
    // Progress tracking
    window.addEventListener('scroll', () => {
      const sections = ['process', 'requirements'];
      sections.forEach(sectionId => {
        const section = document.getElementById(sectionId);
        if (section) {
          const rect = section.getBoundingClientRect();
          if (rect.top < window.innerHeight && rect.bottom > 0) {
            section.style.opacity = '1';
            section.style.transform = 'translateY(0)';
          }
        }
      });
    });
  </script>
</body>
</html>

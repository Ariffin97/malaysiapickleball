  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const kbsBtn = document.getElementById('kbsBtn');
      const mpaBtn = document.getElementById('mpaBtn');
      const kbsContent = document.getElementById('kbsContent');
      const mpaContent = document.getElementById('mpaContent');

      // Show KBS content by default
      function showKBS() {
        kbsContent.style.display = 'block';
        mpaContent.style.display = 'none';
        kbsBtn.classList.add('bg-blue-600', 'text-white');
        kbsBtn.classList.remove('text-gray-700');
        mpaBtn.classList.remove('bg-green-600', 'text-white');
        mpaBtn.classList.add('text-gray-700');
      }

      function showMPA() {
        mpaContent.style.display = 'block';
        kbsContent.style.display = 'none';
        mpaBtn.classList.add('bg-green-600', 'text-white');
        mpaBtn.classList.remove('text-gray-700');
        kbsBtn.classList.remove('bg-blue-600', 'text-white');
        kbsBtn.classList.add('text-gray-700');
      }

      // Initialize with KBS content
      showKBS();

      // Button event listeners
      kbsBtn.addEventListener('click', function() {
        showKBS();
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });

      mpaBtn.addEventListener('click', function() {
        showMPA();
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });

      // MPA Milestones functionality
      initializeMilestones();
    });

    // Milestone data loaded from MongoDB API
    let milestones = [];

    function initializeMilestones() {
      fetchMilestones();
    }

    async function fetchMilestones() {
      try {
        const response = await fetch('/api/milestones/published');
        const result = await response.json();
        
        if (result.success) {
          milestones = result.milestones;
          console.log(`🏆 Loaded ${milestones.length} milestones from database`);
          loadMilestones();
          attachMilestoneCarousel();
        } else {
          console.error('Failed to fetch milestones:', result.message);
          loadFallbackMilestones();
        }
      } catch (error) {
        console.error('Error fetching milestones:', error);
        loadFallbackMilestones();
      }
    }

    function loadMilestones() {
      const container = document.getElementById('milestoneContainer');
      if (!container) return;

      // Clear existing content
      container.innerHTML = '';

      if (milestones.length === 0) {
        container.innerHTML = '<div class="text-center text-gray-500 py-8">No milestones available</div>';
        return;
      }

      // Create milestone cards
      milestones.forEach(milestone => {
        const milestoneCard = document.createElement('div');
        milestoneCard.className = 'milestone-card flex-none w-80 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300';
        milestoneCard.style.scrollSnapAlign = 'start';

        // Format date for display
        const formattedDate = new Date(milestone.date).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        });

        milestoneCard.innerHTML = `
          <div class="p-6">
            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0">
                <img src="${milestone.image || '/images/milestone-placeholder.jpg'}" alt="${milestone.title}" 
                     class="w-16 h-16 rounded-full object-cover border-2 border-blue-200"
                     onerror="this.src='/images/milestone-placeholder.jpg'">
              </div>
              <div class="flex-1 min-w-0">
                <h3 class="text-lg font-semibold text-gray-900 truncate">${milestone.title}</h3>
                <p class="text-sm text-gray-600 mt-1">${formattedDate}</p>
                <p class="text-sm text-gray-700 mt-2 line-clamp-2">${milestone.description}</p>
              </div>
            </div>
          </div>
        `;

        container.appendChild(milestoneCard);
      });

      console.log(`🏆 Displayed ${milestones.length} milestones`);
    }

    function loadFallbackMilestones() {
      // Fallback in case API fails - load some basic milestones
      milestones = [
        {
          _id: 'fallback1',
          title: "MPA Foundation",
          date: "2020-01-15",
          description: "Malaysia Pickleball Association was officially established to promote and develop the sport of pickleball nationwide.",
          image: "/images/milestone-foundation.jpg"
        },
        {
          _id: 'fallback2',
          title: "First National Tournament",
          date: "2021-03-22",
          description: "Successfully organized the first-ever National Pickleball Championship with 200+ participants from 10 states.",
          image: "/images/milestone-tournament.jpg"
        }
      ];
      
      console.log('🏆 Loaded fallback milestones');
      loadMilestones();
      attachMilestoneCarousel();
    }

    // Auto-scroll carousel for milestones (adapted from news carousel)
    function attachMilestoneCarousel() {
      const carousel = document.getElementById('milestoneContainer');
      const leftBtn = document.getElementById('milestoneScrollLeft');
      const rightBtn = document.getElementById('milestoneScrollRight');
      const indicators = document.getElementById('milestoneIndicators');
      
      if (!carousel || !leftBtn || !rightBtn || !indicators) return;
      
      // Wait for cards to be loaded
      setTimeout(() => {
        const cards = Array.from(carousel.children);
        const count = cards.length;
        
        if (count <= 1) {
          console.log(`🏆 Only ${count} milestone found, no auto-scroll needed`);
          leftBtn.style.display = 'none';
          rightBtn.style.display = 'none';
          return;
        }
        
        console.log(`🏆 ${count} milestones found, starting auto-scroll`);
        
        let currentIndex = 0;
        let autoScrollTimer;

        // Create indicator dots
        indicators.innerHTML = '';
        for (let i = 0; i < count; i++) {
          const dot = document.createElement('button');
          dot.className = `w-3 h-3 rounded-full transition-all duration-300 ${i === 0 ? 'bg-blue-600' : 'bg-gray-300'}`;
          dot.addEventListener('click', () => scrollToIndex(i));
          indicators.appendChild(dot);
        }

        function stepWidth() {
          return carousel.clientWidth; // Scroll exactly one container width
        }
        
        function updateIndicators() {
          const dots = indicators.children;
          for (let i = 0; i < dots.length; i++) {
            dots[i].className = `w-3 h-3 rounded-full transition-all duration-300 ${i === currentIndex ? 'bg-blue-600' : 'bg-gray-300'}`;
          }
        }
        
        function scrollToIndex(index) {
          currentIndex = index;
          if (currentIndex >= count) currentIndex = 0;
          if (currentIndex < 0) currentIndex = count - 1;
          
          const scrollLeft = Math.round(currentIndex * stepWidth());
          carousel.scrollTo({ left: scrollLeft, behavior: 'smooth' });
          updateIndicators();
          
          console.log(`🏆 Scrolled to milestone ${currentIndex + 1}`);
        }
        
        function next() {
          scrollToIndex(currentIndex + 1);
        }
        
        function prev() {
          scrollToIndex(currentIndex - 1);
        }
        
        // Auto-scroll functionality
        function startAutoScroll() { 
          stopAutoScroll(); 
          autoScrollTimer = setInterval(next, 5000); // Auto-scroll every 5 seconds
          console.log('🏆 Milestone auto-scroll started');
        } 
        
        function stopAutoScroll() { 
          if (autoScrollTimer) {
            clearInterval(autoScrollTimer);
            autoScrollTimer = null;
          }
        }
        
        // Button event listeners
        leftBtn.addEventListener('click', () => {
          prev();
          stopAutoScroll();
          setTimeout(startAutoScroll, 3000); // Restart auto-scroll after 3 seconds
        });
        
        rightBtn.addEventListener('click', () => {
          next();
          stopAutoScroll();
          setTimeout(startAutoScroll, 3000); // Restart auto-scroll after 3 seconds
        });
        
        // Pause auto-scroll on hover
        carousel.addEventListener('mouseenter', stopAutoScroll);
        carousel.addEventListener('mouseleave', startAutoScroll);
        
        // Initialize auto-scroll
        startAutoScroll();
        
        console.log(`🏆 Milestone carousel initialized with ${count} milestones and auto-scroll enabled`);
      }, 500); // Wait 500ms for cards to be fully rendered
    }
  </script>

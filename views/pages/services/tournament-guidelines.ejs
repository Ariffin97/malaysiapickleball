  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const kbsBtn = document.getElementById('kbsBtn');
      const mpaBtn = document.getElementById('mpaBtn');
      const kbsContent = document.getElementById('kbsContent');
      const kbsContentEnglish = document.getElementById('kbsContentEnglish');
      const mpaContent = document.getElementById('mpaContent');
      const mpaContentMalay = document.getElementById('mpaContentMalay');
      const kbsLanguageToggle = document.getElementById('kbsLanguageToggle');
      const mpaLanguageToggle = document.getElementById('mpaLanguageToggle');
      const kbsMalayBtn = document.getElementById('kbsMalayBtn');
      const kbsEnglishBtn = document.getElementById('kbsEnglishBtn');
      const mpaEnglishBtn = document.getElementById('mpaEnglishBtn');
      const mpaMalayBtn = document.getElementById('mpaMalayBtn');
      
      let currentKbsLanguage = 'malay'; // Default to Malay
      let currentMpaLanguage = 'english'; // Default to English for MPA

      // Show KBS content by default
      function showKBS() {
        // Hide MPA content
        mpaContent.style.display = 'none';
        mpaContentMalay.style.display = 'none';
        
        // Show KBS content based on current language
        if (currentKbsLanguage === 'malay') {
          kbsContent.style.display = 'block';
          kbsContentEnglish.style.display = 'none';
        } else {
          kbsContent.style.display = 'none';
          kbsContentEnglish.style.display = 'block';
        }
        
        // Show KBS language toggle, hide MPA language toggle
        kbsLanguageToggle.style.display = 'block';
        mpaLanguageToggle.style.display = 'none';
        
        // Update button styles
        kbsBtn.classList.add('bg-blue-600', 'text-white');
        kbsBtn.classList.remove('text-gray-700');
        mpaBtn.classList.remove('bg-green-600', 'text-white');
        mpaBtn.classList.add('text-gray-700');
      }

      function showMPA() {
        // Hide KBS content
        kbsContent.style.display = 'none';
        kbsContentEnglish.style.display = 'none';
        
        // Show MPA content based on current language
        if (currentMpaLanguage === 'english') {
          mpaContent.style.display = 'block';
          mpaContentMalay.style.display = 'none';
        } else {
          mpaContent.style.display = 'none';
          mpaContentMalay.style.display = 'block';
        }
        
        // Show MPA language toggle, hide KBS language toggle
        mpaLanguageToggle.style.display = 'block';
        kbsLanguageToggle.style.display = 'none';
        
        // Update button styles
        mpaBtn.classList.add('bg-green-600', 'text-white');
        mpaBtn.classList.remove('text-gray-700');
        kbsBtn.classList.remove('bg-blue-600', 'text-white');
        kbsBtn.classList.add('text-gray-700');
      }
      
      function switchKbsLanguage(language) {
        currentKbsLanguage = language;
        
        if (language === 'malay') {
          kbsContent.style.display = 'block';
          kbsContentEnglish.style.display = 'none';
          
          // Update language button styles
          kbsMalayBtn.classList.add('bg-blue-600', 'text-white');
          kbsMalayBtn.classList.remove('text-blue-700');
          kbsEnglishBtn.classList.remove('bg-blue-600', 'text-white');
          kbsEnglishBtn.classList.add('text-blue-700');
        } else {
          kbsContent.style.display = 'none';
          kbsContentEnglish.style.display = 'block';
          
          // Update language button styles
          kbsEnglishBtn.classList.add('bg-blue-600', 'text-white');
          kbsEnglishBtn.classList.remove('text-blue-700');
          kbsMalayBtn.classList.remove('bg-blue-600', 'text-white');
          kbsMalayBtn.classList.add('text-blue-700');
        }
      }

      function switchMpaLanguage(language) {
        currentMpaLanguage = language;
        
        if (language === 'english') {
          mpaContent.style.display = 'block';
          mpaContentMalay.style.display = 'none';
          
          // Update language button styles
          mpaEnglishBtn.classList.add('bg-green-600', 'text-white');
          mpaEnglishBtn.classList.remove('text-green-700');
          mpaMalayBtn.classList.remove('bg-green-600', 'text-white');
          mpaMalayBtn.classList.add('text-green-700');
        } else {
          mpaContent.style.display = 'none';
          mpaContentMalay.style.display = 'block';
          
          // Update language button styles
          mpaMalayBtn.classList.add('bg-green-600', 'text-white');
          mpaMalayBtn.classList.remove('text-green-700');
          mpaEnglishBtn.classList.remove('bg-green-600', 'text-white');
          mpaEnglishBtn.classList.add('text-green-700');
        }
      }

      // Initialize with KBS content in Malay
      showKBS();
      switchKbsLanguage('malay');
      switchMpaLanguage('english');

      // Button event listeners
      kbsBtn.addEventListener('click', function() {
        showKBS();
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });

      mpaBtn.addEventListener('click', function() {
        showMPA();
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
      
      // KBS Language toggle event listeners
      kbsMalayBtn.addEventListener('click', function() {
        switchKbsLanguage('malay');
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
      
      kbsEnglishBtn.addEventListener('click', function() {
        switchKbsLanguage('english');
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });

      // MPA Language toggle event listeners
      mpaEnglishBtn.addEventListener('click', function() {
        switchMpaLanguage('english');
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
      
      mpaMalayBtn.addEventListener('click', function() {
        switchMpaLanguage('malay');
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });

    });

  </script>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Player Rankings - Malaysia Pickleball Association</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<%
  const defaultBg = backgroundImage || '/images/defaultbg.png';
%>
<body class="bg-gray-100 bg-cover bg-center bg-fixed min-h-screen" style="background-image: url('<%= defaultBg %>')">
  <%- include('../../partials/header') %>
  <%- include('../../partials/sidebar') %>
  <main class="md:ml-64 pt-20 p-4 pb-20 min-h-screen">
    <div class="container mx-auto">
      <div class="bg-white bg-opacity-90 p-6 rounded-lg shadow-lg mb-6">
        <h1 class="text-3xl font-bold mb-4 text-gray-800">Player Rankings</h1>
      </div>
      <% if (rankings.length) { %>
        <div class="bg-white bg-opacity-95 p-4 rounded-lg shadow-lg">
          <table class="w-full">
            <thead>
              <tr class="bg-gray-200">
                <th class="p-2 text-left">Rank</th>
                <th class="p-2 text-left">Player</th>
              </tr>
            </thead>
            <tbody>
              <% rankings.forEach(ranking => { %>
                <tr class="border-b">
                  <td class="p-2"><%= ranking.rank %></td>
                  <td class="p-2"><%= ranking.player %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="bg-white bg-opacity-90 p-6 rounded-lg shadow-lg">
          <p>No rankings available at the moment.</p>
        </div>
      <% } %>
    </div>
  </main>

  <%- include('../../partials/footer') %>
  <script src="/js/script.js"></script>
</body>
</html>

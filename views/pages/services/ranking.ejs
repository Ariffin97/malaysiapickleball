            <div class="text-right">
              <span class="text-2xl font-bold ${rankColor}">#${player.rank}</span>
            </div>
          </div>
          
          <div class="grid grid-cols-3 gap-4 pt-3 border-t border-gray-100">
            <div class="text-center">
              <div class="text-lg font-bold text-gray-800">${player.points.toLocaleString()}</div>
              <div class="text-xs text-gray-500">Points</div>
            </div>
            <div class="text-center">
              <div class="text-sm">
                <span class="text-green-600 font-semibold">${player.wins}W</span>
                <span class="text-gray-400 mx-1">/</span>
                <span class="text-red-600 font-semibold">${player.losses}L</span>
              </div>
              <div class="text-xs text-gray-500">${winRate}% win rate</div>
            </div>
            <div class="text-center">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                <div class="w-1.5 h-1.5 bg-green-500 rounded-full mr-1"></div>
                ${player.status}
              </span>
            </div>
          </div>
        `;
        cardsContainer.appendChild(card);
      });
    }
  </script>
</body>
